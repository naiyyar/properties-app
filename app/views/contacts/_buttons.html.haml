- active_listings = building.listings.active
- prices = false
.contact-links
	%div.left-section{style: "padding: #{size_class.present? ? '2px 3px 2px 6px;' : '6px 8px 8px 11px;'}"}
		- if building.prices.present?
			- prices = true
			= link_to @show_path, style: 'color: #333' do
				%div.pb-8{class: (!building.has_active_email? and active_listings.present?) ? 'wmd' : 'wxl'}
					= "<span> #{building.prices} | </span>".html_safe
					%span=building.show_bed_ranges.join(', ') 
					= 'Bed' if building.bedroom_types?
		- elsif active_listings.blank?
			%div.pb-8{class: !building.has_active_email? ? 'wmd' : 'wxl'}
		
		- unless building.has_active_email?
			%div.pb-8{class: !prices ? 'ml' : ''}
				=link_to "#{active_listings.count} Active Listings", 'javascript:;',class: "active-listing-link hyper-link font-xs #{!prices ? 'ml' : ''}", data: {bid: building.id, type: 'listings'} if active_listings.present?
		
		= check_availability_link(building, size_class)

	%div.right-section{style: "padding: #{size_class.present? ? '0px 6px 0px 0px;' : '0px 10px 0px 0px;'}", class: "#{'hidden' unless building.has_active_email?}" }
		- unless action_name == 'show' and controller_name == 'buildings'
			- if active_listings.blank?
				= link_to @show_path, style: 'color: #333' do
					%p.font-xs.pb-8
			- else
				%p.font-xs.pb-8
					=link_to "#{active_listings.count} Active Listings", 'javascript:;',class: 'active-listing-link hyper-link', data: {bid: building.id, type: 'listings'}
    
		- if building.has_active_email?
			%a.btn.btn-primary.btn-o{href: 'javascript:;', class: "#{size_class}", data: {bid: building.id, type: 'contact'}, style: "padding: #{size_class.present? ? '8px 2px;' : '10px 6px;'}"}
				%b Contact Leasing