<%= form_for(@contact) do |f| %>
  <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: 'Name (Optional)' %>
  </div>
  <div class="form-group">
      <%= f.email_field :email, class: "form-control validate", placeholder: 'Email' %>
  </div>
  <div class="form-group">
      <%= f.text_area :comment, class: "form-control validate", placeholder: "Message...", rows: 10 %>
  </div>
  <%= f.submit 'Send', class: 'btn btn-green float-end' %>
<% end %>
