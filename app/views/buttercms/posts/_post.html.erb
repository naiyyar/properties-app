
	<% if @count % 2 == 0 %>
  <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
    <div class="article">
        <a href="<%=buttercms_post_path(post.slug)%>" class="image"><%= image_tag(post.featured_image) if post.featured_image %></a>
        <!-- <div class="article-category invisible"><a href="#" class="text-green">Architecture</a></div> -->
        
        <h3 class="osLight"><%= link_to truncate(post.title, length: 60), buttercms_post_path(post.slug), :title => post.title %></h3>
        
        <p><%#= post.summary %></p>
        <!-- <div class="footer"><a href="#">John Smith</a>, <a href="#">Sep 4, 2014</a></div> -->
    </div>
  </div>
  <% elsif @count % 2 == 1 %>
	  <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
	    <div class="article">
	        <a href="<%=buttercms_post_path(post.slug)%>" class="image"><%= image_tag(post.featured_image) if post.featured_image %></a>
	        <!-- <div class="article-category invisible"><a href="#" class="text-green">Architecture</a></div> -->
	        
	        <h3 class="osLight"><%= link_to truncate(post.title, length: 60), buttercms_post_path(post.slug), :title => post.title %></h3>
	        
	        <p><%#= post.summary %></p>
	        <div class="footer"><span class="text-muted"><%="#{post.author.first_name} #{post.author.last_name}"%>, <%= Time.parse(post.published).strftime('%B %d, %Y') %></span></div>
	    </div>
	  </div>
	<%end%>

