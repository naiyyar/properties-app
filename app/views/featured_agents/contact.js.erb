$('#remote-container').html('<%= j render "featured_agents/contact_agent_modal" %>');
<% unless browser.device.mobile? %>
	$('#contactAgentModal').modal('show');
<%else%>
	var elem = $('.contact-agent-modal');
	elem.slideDown(200);
	$('.closeContact').click(function(e) {
    e.stopPropagation();
    elem.slideUp(200);
  });
<%end%>