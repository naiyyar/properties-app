%h2
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    #filterrific_results{style: 'margin-top: 10px;'}
      .table-overflow
        %table.table.table-striped#sortable
          %thead
            %tr
              %th{width: '10%'} Feature ID(#{@featured_agents.count})
              %th{width: '12%'} Agent Name
              %th{width: '20%'} Email
              %th{width: '10%'} Neighborhood
              %th{width: '8%'} (#{@photos_count}) Photos
              %th{width: '15%'} Start Date
              %th{width: '15%'} End Date
              %th{width: '6%'} Edit
              %th{width: '6%'} Delete
              %th{width: '6%'} Renew
              %th{width: '6%'} Active
          
          %tbody.table
            - @featured_agents.each do |agent|
              %tr
                %td=link_to agent.id, edit_featured_agent_path(agent, featured_by: @featured_by)
                %td=link_to agent.full_name
                %td=link_to agent.try(:email), '#'
                %td= link_to '<span class="fa fa-globe"></span>'.html_safe, agent.website, target: '_blank' if agent.website.present?
                %td= agent.uploads_count
                %td= start_date(agent)
                %td= end_date(agent)
                %td
                  = link_to 'edit', edit_featured_agent_path(agent) if agent.draft? or agent.live?
                %td
                  = link_to 'Delete', featured_agent_path(agent), method: :delete, data: {confirm: 'Are you sure you want to delete this featured building?'}, class: 'text-danger' if agent.draft?
                %td
                  %input.apple-switch.sb-sm.feature-agent.renew.disabled{type: 'checkbox', checked: agent.renew, style: 'margin: 0px;', 'data-field' => 'renew', 'data-agentid' => agent.id, disabled: true }
                %td
                  %input.apple-switch.sb-sm.feature-agent{type: 'checkbox', checked: agent.active, style: 'margin: 0px;', data: { agentid: agent.id, fbby: 'manager', expired: agent.expired? ? 'expired' : '', billingurl: agent.expired? ? new_manager_featured_agent_user_path(current_user, type: 'billing', agent_id: agent.id) : '' } }
