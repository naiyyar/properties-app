.similar{style: 'padding: 10px 10px 0px 10px;'}
  #carouselSimilar-1.carousel.slide.carousel-col{style: 'padding: 0px;'}
    .carousel-inner
      .row
        .col-lg-12.col-md-12
          .card.search-view-card.bordered
            .figure{style: 'position: relative;', id: "figure#{@featured_agent.id}"}
              .shimmer
                  
            .building-detail-card
              %h2.name-or-add=@featured_agent.full_name
              .cardAddress= @featured_agent.neighborhood
              .cardAddress= @featured_agent.broker_firm
              .cardAddress=link_to "#{number_to_phone(phone = @featured_agent.try(:phone), area_code: true)}", "tel:#{phone}", class: 'hyper-link'
              %br
              %br
              .contact-links
                .c-links
                  %section=link_to "Work With #{@featured_agent.first_name}", '#', class: 'btn btn-primary'
                  %section=link_to "#{@featured_agent.first_name}'s Profile", @featured_agent.website, class: 'btn btn-default', target: '_blank'
                
          .clearfix