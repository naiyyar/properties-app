- if !mobile
	#contactAgentModal.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'ContactAgentLabel', role: 'dialog'}
		.modal-dialog
			.modal-content
				.modal-header
					%h4.modal-title Contact Agent
					%button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', type: 'button'}
				
				.modal-body.no-padding
					= render 'featured_agents/contact_form', block_class: '', mobile: mobile
- else
	.modal-full.contact-agent-modal{style: 'display: none; background: #fff;'}
		.row{style: 'position: relative;'}
			.col-lg-12
				.text-center{style: 'border-bottom: 1px solid #ddd;'}
					%h4.text-center{style: 'margin-top: 10px; margin-bottom: 10px;'} Contact Agent

			%div.text-end.header.visible-xs{style: 'position: absolute; right: 15px; top: -1px;'}
				= link_to '<span class="fa fa-times fa-3x"></span>'.html_safe, 'javascript:;', class: 'closeContact'
		= render 'featured_agents/contact_form', block_class: 'btn-block', mobile: mobile
				