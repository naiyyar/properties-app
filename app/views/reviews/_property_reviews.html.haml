.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    #filterrific_results{style: "margin-top: 10px;"}
      .table-overflow
        %table.table.table-bordered.table-striped.fixed-layout
          %tr
            %th{width: "16%"} Email
            %th Address
            %th Title
            %th Pros
            %th Cons
            %th Rating
            %th{width: "8%"} Review date
            %th{width: "4%"}
          %tbody
            - reviews.each do |review|
              %tr
                %td.break= review.user.email if review.user_id.present?
                %td.break
                  %a{href: "#{reviewable_path(review)}"}
                    = review.property_name
                    \- #{review.property_address}
                %td.break= review.review_title
                %td.break= simple_format(review.pros)
                %td.break= simple_format(review.cons)
                %td.text-center.star-sm
                  / = rating_for review.reviewable, "#{review.reviewable.class.name.downcase}", disable_after_rate: true, readonly: true if review.reviewable.present?
                  = rating_for_user review.reviewable, review.user, review.reviewable.class.name.downcase, disable_after_rate: true, review_id: review.id if review.reviewable.present?
                %td= review.created_at.strftime("%Y-%m-%d")
                %td.text-center
                  - if current_user && current_user.has_role?(:admin)
                    = link_to '<span class="fa fa-trash"></span>'.html_safe, review_path(review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" }, class: 'text-danger'