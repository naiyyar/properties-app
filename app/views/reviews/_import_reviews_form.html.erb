<div class="modal fade" id="importReviews" role="dialog" aria-labelledby="contirbuteMoreLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
				<%= form_tag import_path, multipart: true, class: 'form-horizontal' do %>
			  	<div class="row" style="margin: 0px;">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="form-group">
                <label>Excel/csv file</label>
                 <%= file_field_tag :file, class: "form-control"%>
                 <%= hidden_field_tag :building_id, @building.id if @building.present? %>
                 <small>Only .csv, .xls, .xlsx formats allowed.</small>
              </div>
              
            </div>
          </div>
          <div class="row" style="margin: 0px;">
	          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
						  <div class="form-group">
		            <div class="float-end">
		              <%= submit_tag 'Import', class: 'btn btn-blue' %>
		            </div>
		          </div> 
		        </div>
		      </div>
				<% end %>
			</div>
		</div>
	</div>
</div>