<div class="modal fade" id="importReviews" role="dialog" aria-labelledby="contirbuteMoreLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
				<%= form_tag import_buildings_path, multipart: true, class: 'form-horizontal' do %>
			  	<!-- <div class="row"> -->
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="form-group">
                <label>Excel/csv file</label>
                 <%= file_field_tag :file, class: "form-control"%>
                 <%= hidden_field_tag :building_id, @building.id%>
                 <small>Only .csv, .xls, .xlsx formats allowed.</small>
              </div>
              
            </div>
          <!-- </div> -->
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
					  <div class="form-group">
	            <div class="pull-right">
	              <%= submit_tag "Import", class: 'btn btn-blue' %>
	            </div>
	          </div> 
	        </div>
				<% end %>
			</div>
		</div>
	</div>
</div>