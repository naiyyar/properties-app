<h1> Review Index </h1>

<%= link_to "Create New Review", new_review_path%>
<%= link_to "Buildings List", buildings_path%>


<br />
<br />
<table>
  <tr>
    <th>Building Review Title</th>
    <th>Building Name</th>
    <th>Building Name<th>
  </tr>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= link_to(review.building_review_title, review_path(review)) %></td>
        <td><%= review.building.try(:building_name) %></td>
        <%  if review.building %>
          <td><%= link_to review.building.building_name, building_path(review.building) %></td>
        <% end %>
        



        <td><%= link_to "edit", edit_review_path(review) %></td>
        <td><%= link_to "delete", review_path(review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"}%></td>

      </tr>
    <% end %>
  </tbody>
</table>
