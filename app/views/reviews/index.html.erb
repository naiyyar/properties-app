<div class="tables">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="table-overflow">
        <table class="table">
          <tr>
            <th>Title</th>
            <th></th>
          </tr>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= link_to(review.review_title, review_path(review)) %></td>
                <td><%= link_to 'delete', review_path(review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" }, class: 'text-danger'%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
