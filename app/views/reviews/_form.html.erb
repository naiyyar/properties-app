<%= form_for [@reviewable, Review.new] do |f| %>

	<div class="form-group">
    <label>Building Address</label>
     <%= f.text_field :building_address, class: "form-control"%>
  </div>

  <div class="form-group">
    <label>Rating</label>
    <% if @reviewable.building_name %>
			<%= rating_for @reviewable, "building"%>
		<%else%>
			<%= rating_for @reviewable, "unit"%>
		<%end%>
	</div>

	<div class="form-group">
		<label>Current or Formar Tenant ?</label>
		<br />
		<div class="btn-group" data-toggle="buttons">
		  <label class="btn btn-default">
		  	<%= f.radio_button :tenant_status, id: 'current_tenant' %> Current
		  </label>
		  <label class="btn btn-default">
		  	<%= f.radio_button :tenant_status, id: 'former_tenant' %> Former
		  </label>
		</div>
	</div>
	
	<div class="form-group">
		<label></label>
		<%= f.select :stay_time, options_for_select([['1 Month', '1_month'], ['2 Month','2_month'], ['2 Month','2_month'], ['6 Month','6_month'], ['8 Month','8_month'], ['10 Month','10_month']]),{prompt: 'Number of Months in Residence	'},  {class: 'form-control'} %>
	</div>

	<div class="form-group">
		<label>Review Title</label>
		<%= f.text_field :review_title,  class: 'form-control' %>
	</div>

	<div class="form-group">
		<label>Pros</label>
		<%= f.text_area :pros,  class: 'form-control' %>
	</div>

	<div class="form-group">
		<label>Cons</label>
		<%= f.text_area :cons,  class: 'form-control' %>
	</div>
	
  <div class="form-group">
		<label>Other TranspaRENTcy and advice to share</label>
		<%= f.text_area :other_advice,  class: 'form-control' %>
	</div>
  
  <% if current_user %>
  	<%= f.hidden_field :user_id, value: current_user.id %>
  <%end%>
    <br />
    <%= f.submit 'Submit', class: "btn btn-primary" %>
<% end %>
  