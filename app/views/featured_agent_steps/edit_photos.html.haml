.row
	.col-lg-12.col-xs-12.col-lg-offset-3
		.row
			.col-lg-4.col-sm-10.col-xs-8= render 'agent_info'
			.col-lg-2.col-sm-2.col-xs-2
				.text-right=link_to 'See Preview', preview_featured_agent_path(@featured_agent), class: 'btn btn-success font-16 font-bold', remote: true
		.row
			.col-lg-12.col-xs-12
				%p.font-bold.font-16 Edit Photos

		.row
			.col-lg-6.col-xs-12
				%ul#gallery.list-inline{'data-imageable-id' => @featured_agent.id, 'data-imageable-type' => @featured_agent.class.name}
					- @uploads.each do |upload|
						= render 'uploads/gallery', upload: upload, featured_image: false 
		%br
		%br

		.row
			.col-lg-6.col-xs-12
				.text-right
					= link_to 'Cancel', agenttools_dashboard_path(@featured_agent), class: 'font-18 pl-28 pr-28'
					= link_to '<- Previous', wizard_path(:add_photos, agent_id: @featured_agent.id), class: 'btn btn-primary btn-o font-18 pl-28 pr-28'
					- next_btn_text = @featured_agent.active? ? 'Done' : 'Next ->'
					= link_to next_btn_text, done_or_next_path, class: 'btn btn-primary font-18 pl-28 pr-28'

		%br
		%br

		#thumbnailPreview.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'NewUnitLabel', role: 'dialog'}
			.modal-dialog.modal-md
				.modal-content{style: 'background-color: #f3f3f3;'}
					.modal-header
						%button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
							%span{'aria-hidden' => 'true'} Ã—
						%h4.modal-title.font-18 Preview Agent
					.modal-body.no-padding
						= render 'featured_agents/thumbnail_preview'
				

