.row
	.col-lg-10.col-sm-10.col-xs-10
		=render 'agent_info'
	.col-lg-2.col-sm-2.col-xs-2
		.pull-right
			=link_to 'See Preview', '#thumbnailPreview', class: 'btn btn-success', 'data-toggle' => 'modal'
%h2
%p.font-bold.font-16 Edit Photos
= render partial: 'featured_agents/photos'

/= render 'featured_agents/thumbnail_preview'

- if !browser.device.mobile?
	#thumbnailPreview.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'NewUnitLabel', role: 'dialog'}
		.modal-dialog.modal-md
			.modal-content
				.modal-header
					%button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
						%span{'aria-hidden' => 'true'} Ã—
					%h4.modal-title
				.modal-body.no-padding
					/= render 'contacts/contact_building_form'
- else
	.modal-full.lease-contact-modal{style: 'display: none; background: #fff;'}
		.row{style: 'position: relative;'}
			.col-lg-12
				.text-center{style: 'border-bottom: 1px solid #ddd;'}
					%h4.text-center{style: 'margin-top: 10px; margin-bottom: 10px;'}

			%div.text-right.header.visible-xs{style: 'position: absolute; right: 15px; top: -1px;'}
				= link_to '<span class="fa fa-times fa-3x"></span>'.html_safe, 'javascript:;', class: 'closeContact'
    
		/ = render 'contacts/contact_building_form'
				

