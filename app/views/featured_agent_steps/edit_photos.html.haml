	.col-lg-2.col-sm-2.col-xs-2
		.text-right=link_to 'See Preview', preview_featured_agent_path(@featured_agent), class: 'btn btn-success', remote: true
.row
	.col-lg-12.col-xs-12.col-lg-offset-3
		%p.font-bold.font-16 Edit Photos

.row
	.col-lg-6.col-xs-12.col-lg-offset-3= render 'featured_agents/photos', photo_counts: @photos_count

