- if !browser.device.mobile?
  #showPastListing.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "NewUnitLabel", role: "dialog"}
    .modal-dialog.modal-md
      .modal-content
        .modal-header{style: 'padding: 15px 15px 0px;'}
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
            %span{"aria-hidden" => "true"} Ã—
          %div.modal-title
            = listing_header_title(@rentals).html_safe
        .modal-body.no-padding
          = render 'buildings/show/listings', listings: @listings
- else
  .modal-full.past-listing-modal{style: 'display: none; background: #fff;'}
    .row{style: 'position: relative;'}
      .col-lg-12
        .text-left.title-header{style: 'border-bottom: 1px solid #ddd;'}
          %h4.text-left{style: 'margin-top: 10px; margin-bottom: 10px;'}
            = listing_header_title(@rentals).html_safe

      %div.text-right.header.visible-xs{style: 'position: absolute; right: 15px; top: -1px;'}
        = link_to '<span class="fa fa-times fa-3x"></span>'.html_safe, '#', class: 'closeContact'
    
    = render 'buildings/show/listings', listings: @listings

    :css
      .past-listing-modal .title-header{
        padding: 0px 4px;
      }