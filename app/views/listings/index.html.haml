.tables
  .row
    .col-lg-6.col-md-6
      - if flash[:error]
        .text-left
          .error.import-errors.well
            %a.close{'data-dismiss'=>"alert", 'aria-label'=>"close"}
              &times;
            - flash[:error].each do |err_message|
              %p.text-danger= err_message
    
    .col-xs-12.col-sm-12.col-md-6.col-lg-6
      .pull-right
        = link_to 'Add New Listing', new_listing_path, class: 'btn btn-blue'
        &nbsp;
        = link_to 'Import excel', '#importReviews', class: 'btn btn-success pull-right', 'data-toggle' => 'modal'
        = render 'reviews/import_reviews_form', import_path: import_listings_path
        
  %p
  
  .row
    .listing-actions{style: 'margin-left: 10px;display:none'}
      .col-lg-1
        = form_tag '/listings/change_status', id: 'active_on_action_form' do
          =hidden_field_tag :active, true
          =submit_tag 'Active On', class: 'btn btn-sm btn-green mb5'
      .col-lg-1
        = form_tag '/listings/change_status', id: 'active_off_action_form' do
          =hidden_field_tag :active, false
          =submit_tag 'Active Off', class: 'btn btn-sm btn-gray mb5'
      .col-lg-1
        = form_tag '/listings/delete_all', id: 'delete_action_form' do
          =submit_tag 'Delete', class: 'btn btn-sm btn-danger mb5'

  .pull-right
    = form_for_filterrific @filterrific do |f|
      .form-field
        = f.text_field :search_query, class: 'filterrific-periodically-observed form-control', placeholder: 'Search'
      .form-field
  
  .row
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      #filterrific_results{style: "margin-top: 10px;"}
        .table-overflow
          %table.table.table-striped#sortable
            %thead
              %tr
                %th.no-sort.text-center
                  =check_box_tag "check_all_listing", nil, nil, class: 'check_all_listing'
                %th Date Active
                %th Management
                %th Building Address
                %th{width: "5%"} Unit
                %th Rent
                %th{width: "5%"} Bed
                %th{width: "5%"} Bath
                %th.text-center{width: "5%"} Months Free
                %th.text-center{width: "5%"} OP
                %th.text-center{width: "5%"} RS
                %th Date Available
                %th.no-sort 
                %th.no-sort 
                %th.no-sort Active
            
            %tbody.table#listings-body
              = render 'listings/listings'

.text-center
  = will_paginate @listings, renderer: BootstrapPagination::Rails


:css
  #sortable_filter{
    display: none;
  }