$('#remote-container').html("<%= j render 'listings/show_more' %>");
var opened = true;
<% unless browser.device.mobile? %>
	$('#showPastListing').modal('show');
<%else%>
	if(opened){
		$('.past-listing-modal').slideDown(200);
		opened = false;
	}
	$('.closeContact').click(function(e) {
    e.stopPropagation();
    //$('.past-listing-modal').slideToggle(200);
    $('.past-listing-modal').slideUp(200);
    return false;
  });
<%end%>
var lm_height = $(document).height();
setTimeout(function(){
	$('.past-listing-modal').height(lm_height);	
}, 500);