- if !mobile?
  #billingsModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "NewUnitLabel", role: "dialog"}
    .modal-dialog.modal-lg
      .modal-content
        .modal-header{style: 'padding: 15px 15px 0px;'}
          %div.modal-title Invoice History
          %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', type: 'button'}
            
        .modal-body.no-padding
          = render 'billings/billings'
- else
  .modal-full.invoice-billing-modal{style: 'display: none; background: #fff;'}
    .row{style: 'position: relative;'}
      .col-lg-12
        .text-center{style: 'border-bottom: 1px solid #ddd;'}
          %h4.text-center{style: 'margin-top: 10px; margin-bottom: 10px;'} Invoice History

      %div.text-right.header.visible-xs{style: 'position: absolute; right: 15px; top: -1px;'}
        = link_to '<span class="fa fa-times fa-3x"></span>'.html_safe, '#', class: 'closeContact'
    
    = render 'billings/billings'