#emailInvoice.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "contirbuteMoreLabel", role: "dialog"}
	.modal-dialog
		.modal-content
			.modal-header
				%h4 Email Receipt
				%button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
      
			.modal-body
				= form_tag email_receipt_billing_path(@billing), method: :post, id: 'email-form', class: 'form-horizontal' do
					%fieldset
						.form-group
							%label From
							= text_field_tag :email_form, 'hello@myapp.com', class: 'form-control', readonly: true

						.row
							.col-lg-12
								.form-group
									%label 
										To
										%span.fa.fa-info-circle{'aria-hidden' => "true", title: 'Enter multiple emails separated by comma.', data: {toggle: "tooltip", placement: "right"} }
									= text_field_tag :email_to, current_user.email, required: true, class: 'form-control'

						.form-group
							.col-sm-12
								.float-end
									=submit_tag 'Send', class: 'btn btn-primary'

