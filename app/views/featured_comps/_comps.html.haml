%h2
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    #filterrific_results{style: 'margin-top: 10px;'}
      .table-overflow
        %table.table.table-striped#sortable
          %thead
            %tr
              %th{width: '9%'} Comp ID(#{@featured_comps.count})
              %th{width: '20%'} Building
              %th{width: '20%'} Management
              %th{width: '6%'} Website
              %th{width: '8%'} Featured On
              %th{width: '10%'} Start Date
              %th{width: '10%'} End Date
              %th
              %th
              %th Active
          
          %tbody.table
            - @featured_comps.each do |comp|
              - building = comp.building
              %tr
                %td=link_to comp.id, edit_featured_comp_path(comp)
                %td=link_to building.building_name_or_address, building_path(building)
                %td=link_to building.management_company.try(:name), '#'
                %td
                  = link_to globe_icon_helper, building.web_url, target: '_blank' if building.web_url.present?
                %td= link_to comp.buildings.count, featured_comp_path(comp) , class: 'hyper-link'
                %td= comp.start_date
                %td= comp.end_date
                %td= link_to 'edit', edit_featured_comp_path(comp)
                %td= link_to 'Delete', featured_comp_path(comp), method: :delete, data: {confirm: 'Are you sure you want to delete this comp?'}, class: 'text-danger'
                %td.text-center
                  %input.apple-switch.sb-sm.featured_comps{type: 'checkbox', checked: comp.active, style: 'margin: 0px;', data: { compid: comp.id } }