<p id="notice"><%= notice %></p>

<h1>Listing Prices</h1>

<table>
  <thead>
    <tr>
      <th>Priceable</th>
      <th>Priceable type</th>
      <th>Min price</th>
      <th>Max price</th>
      <th>Bed type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.priceable_id %></td>
        <td><%= price.priceable_type %></td>
        <td><%= price.min_price %></td>
        <td><%= price.max_price %></td>
        <td><%= price.bed_type %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

