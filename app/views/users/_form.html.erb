<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading"><b>Update Details</b></div>
      <div class="panel-body"> 
        <%= form_for @user, class: 'form-horizontal' do |f| %>
          <div class="form-group">
            <label>Name</label>
             <%= f.text_field :name, class: "form-control"%>
          </div>
            
          <div class="form-group">
            <label>phone</label>
            <%= f.text_field :phone, class: "form-control" %>
          </div>
        
          <div class="form-group">
            <label>Mobile</label>
            <%= f.text_field :mobile, class: "form-control", max: 10 %>
          </div>
        
          <div class="form-group">
            <label>About</label>
            <%= f.text_area :about_me, class: "form-control" %>
          </div>
        
          <div class="form-group">
            <label>Image</label>
            <%= f.file_field :avatar, class: "form-control"%>
          </div>
            
          <div class="form-group">
            <div class="col-sm-12">
              <div class="pull-right">
                <%= f.submit 'Save', class: "btn btn-blue" %>
              </div>
            </div>
          </div>  
        <% end %>
      </div>
    </div>
  </div>
</div>