<% if @tourable.class.name == 'Building' %>
	$("#<%=@category.downcase%>-form").append('<%= j render partial: "video_tours/form_fields", locals: { video_tour: @video_tour, category: @category, index: @sort_index, object: @tourable } %>');
<%else%>
	$("#featured_listing-form").append('<%= j render partial: "featured_listings/add_tour_form", \
																									 locals: { video_tour: @video_tour, \
																									 					 category: @category, \
																									 					 index: @sort_index, \
																									 					 object: @tourable } %>');
<%end%>

// remove
$('.remove-fields').on('click', function(){
  $(this).parent().parent().parent().parent().parent().remove();
});