- if !browser.device.mobile?
  #showTourModal.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'NewUnitLabel', role: 'dialog'}
    .modal-dialog.modal-md
      .modal-content
        .modal-header
          %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button'}
            %span{'aria-hidden' => 'true'} Ã—
          %h4.modal-title Video Tours
        .modal-body.no-padding
          = render 'show'
- else
  .modal-full.show-tour-modal{style: 'display: none; background: #fff;'}
    .row{style: 'position: relative;'}
      .col-lg-12
        .text-center{style: 'border-bottom: 1px solid #ddd;'}
          %h4.text-center{style: 'margin-top: 10px; margin-bottom: 10px;'} Video Tours

      %div.text-right.header.visible-xs{style: 'position: absolute; right: 15px; top: -1px;'}
        = link_to '<span class="fa fa-times fa-3x"></span>'.html_safe, 'javascript:;', class: 'closeContact'
    
    = render 'show'