- if !browser.device.mobile?
  #showTourModal.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'NewUnitLabel', role: 'dialog'}
    .modal-dialog.modal-md
      .modal-content{style: 'background-color: #333;'}
        .modal-header
          %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button', style: 'color: #fff;opacity: 1;'}
            %span{'aria-hidden' => 'true'} Ã—
          %h4.modal-title{style: 'color: #fff;'}
            .pageTitle.font-bold{style: 'font-size: 16px;'}= @tourable.property_name_or_address
            .address{style: 'font-size: 14px;'}= @tourable.full_street_address
        .modal-body.no-padding
          - @vd_height = '190'
          #first-category
            = render 'video_tours/show', cat_color: 'fff', tourable_type: tourable_type
          #other-categories
- else
  .modal-full.show-tour-modal{style: 'display: none; background: #333;color: #fff;'}
    .row{style: 'position: relative;'}
      .col-lg-12
        .text-center{style: 'border-bottom: 1px solid #ddd;'}
          %h4.text-left{style: 'margin-top: 10px; margin-bottom: 10px;'}
            .pageTitle.font-bold{style: 'font-size: 16px;'}= @tourable.property_name_or_address
            .address{style: 'font-size: 14px;'}= @tourable.full_street_address

      %div.text-right.header.visible-xs{style: 'position: absolute; right: 15px; top: -1px;'}
        = link_to '<span class="fa fa-times fa-3x"></span>'.html_safe, 'javascript:;', class: 'closeTour', style: 'color: #fff;'
    - @vd_height = '200'
    #first-category
      = render 'video_tours/show', cat_color: 'fff', tourable_type: tourable_type
    #other-categories