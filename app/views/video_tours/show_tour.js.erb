var container = $("#remote-container");
var delay = 200;
if(container.children().first().attr('id') != 'showTourModal'){
	container.html('<%= j render partial: "show_tour_modal" %>');
}

<% unless browser.device.mobile? %>
	$('#showTourModal').modal('show');
<%else%>
	$('.show-tour-modal').slideDown(delay);
	$('.closeTour').click(function(e) {
    e.stopPropagation();
    $('.show-tour-modal').slideUp(delay);
  });
<%end%>

Transparentcity.initFancybox('#showTourModal .tour-fbox, .show-tour-modal .tour-fbox');