<% @building.reviews.each do |review| %>
  <div class="media">
      <div class="media-left">
        <a href="#">
          <% if review.user.avatar.present? %>
            <%= image_tag review.user.avatar %>
          <% elsif review.user.image_url.present? %>
            <%= image_tag review.user.image_url %>
          <%else%>
            <span class="fa fa-user fa-2x"></span>
          <%end%>
        </a>
      </div>

      <div class="media-body">
        <h4 class="media-heading"><%= review.user.name %></h4>
        <p class="text-muted"><%= review.created_at.strftime("%b %d, %Y") %> by <%= review.user.name %></p>
        <p> <%= simple_format(review.review_title) %></p>
      </div>
      <ul class="list-inline">
        <li><%= rating_for_user @building, review.user, 'building', disable_after_rate: true %></li> |
        <li>
          <span class='fa fa-thumbs-o-up fa-1x'><%= review.reviewable.get_upvotes.size %></span> &nbsp;
          <span class='fa fa-thumbs-o-down fa-1x'><%= review.reviewable.get_downvotes.size %></span>
        </li> |
        <li>Tenant: <%= "#{review.tenant_status}" " (#{review.stay_time})" %></li>
      </ul>
     <!--  <span class="pull-left"><%#= rating_for_user @building, review.user,"building", star: 5 %></span> - <span class='fa fa-thumbs-o-up fa-1x'><%#= review.reviewable.get_upvotes.size %></span> <span class='fa fa-thumbs-o-down fa-1x'><%#= review.reviewable.get_downvotes.size %></span> - Current Tenanet(2 years) -->
    </div>
    <hr />
<% end %>