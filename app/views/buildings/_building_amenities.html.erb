<% @building ||= building %>
<div class="amenities show-section">
  <h3>Building Amenities
    <%= link_to 'Edit', "/building_steps/building_information?building_id=#{@building.id}", class: "btn btn-o btn-default btn-xs pull-right" if current_user.present? and current_user.has_role? :admin %>
  </h3>
  <div class="row">
    <% BuildingAmenities.all_amenities.each_pair do |k, v| %>
      <%if @building[k].present? %>
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4 amItem font-14">
          <span><%= image_tag "amenities_icons/#{k}.png", width: '16', height: '16', alt: "#{v}" %></span>
          <% if v == 'Elevator' %>
            <%= "#{v}(#{@building.elevator})" %>
          <%else%> 
            <%= v %>
          <%end%>
        </div>
      <%end%>
    <%end%>
  </div>
</div>