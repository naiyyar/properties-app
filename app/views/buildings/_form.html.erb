<div class="tables">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading"><b>New Building</b></div>
        <div class="panel-body"> 
          <%= form_for @building, class: 'form-horizontal' do |f| %>
            <div class="form-group">
              <label>Building Name</label>
               <%= f.text_field :building_name, class: "form-control"%>
               <%= f.hidden_field :user_id, value: current_user.id, class: "form-control"%>
            </div>
              <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <div class="form-group">
                  <label>Floors (Optional)</label>
                  <%= f.number_field :floors, class: "form-control", min: 0 %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <div class="form-group">
                  <label>Built in year (Optional)</label>
                  <%= f.text_field :built_in, class: "form-control", placeholder: 'Built in 2002'%>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <div class="form-group">
                  <label>Units (Optional)</label>
                  <%= f.text_field :number_of_units, class: "form-control", min: 0%>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Address</label>
                  <%= f.text_field :building_street_address, class: "form-control", required: 'required' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>City</label>
                  <%= f.text_field :city, class: "form-control"%>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>State</label>
                  <%= f.text_field :state, class: "form-control"%>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Zip</label>
                  <%= f.text_field :zipcode, class: "form-control"%>
                </div>
              </div>
            </div>
            <!-- <div class="form-group">
              <label>Description</label>
              <%#= f.text_area :description, class: "form-control", rows: 5%>
            </div> -->
              
            <div class="form-group">
              <div class="col-sm-12">
                <div class="pull-right">
                  <% if @building.present? %>
                    <%= f.submit 'Next', class: "btn btn-primary", name: "subaction" %>
                  <%else%>
                    <%= f.submit 'Next', class: "btn btn-primary" %>
                  <%end%>
                </div>
              </div>
            </div>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>