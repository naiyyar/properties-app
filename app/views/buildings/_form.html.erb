<%#= link_to "Back to Building List", buildings_path %>
<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <%= form_for @building, html: { multipart: true } do |f| %>

      <div class="form-group">
        <label  >Building Name</label>
         <%= f.text_field :building_name, class: "form-control"%>
      </div>

       <div class="form-group">
        <label for="exampleInputEmail1">Address1</label>
         <%= f.text_field :building_street_address, class: "form-control"%>
      </div>

       <div class="form-group">
        <label for="exampleInputEmail1">Address2</label>
         <%= f.text_field :address2, class: "form-control"%>
      </div>

       <div class="form-group">
        <label for="exampleInputEmail1">City</label>
         <%= f.text_field :city, class: "form-control"%>
      </div>

       <div class="form-group">
        <label for="exampleInputEmail1">State</label>
         <%= f.text_field :state, class: "form-control"%>
      </div>

       <div class="form-group">
        <label for="exampleInputEmail1">Zip</label>
         <%= f.text_field :zipcode, class: "form-control"%>
      </div>

      <div class="form-group">
        <label for="exampleInputEmail1">Phone</label>
         <%= f.text_field :phone, class: "form-control"%>
      </div>

      <div class="form-group">
        <label for="exampleInputEmail1">Web Address</label>
         <%= f.text_field :webaddress, class: "form-control", placeholder: "https://www.abc.com"%>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Photo</label>
         <%= f.file_field :photo, class: "form-control" %>
      </div>

      <!-- <div class="form-group">
        <label for="exampleInputEmail1">Photo</label>
        <%#= f.fields_for :uploads do |builder| %>
          <%#= builder.text_field :image, class: "form-control dropzone"%>
        <%#end%>
      </div> -->

      <%= f.submit 'Save', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>