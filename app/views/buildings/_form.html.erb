<%#= link_to "Back to Building List", buildings_path %>
<div class="row">
  <%= form_for @building, html: { multipart: true } do |f| %>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="col-sm-12">
        <div class="form-group">
          <label  >Building Name</label>
           <%= f.text_field :building_name, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-6">
         <div class="form-group">
          <label for="exampleInputEmail1">Address1</label>
           <%= f.text_field :building_street_address, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-6">
         <div class="form-group">
          <label for="exampleInputEmail1">Address2</label>
           <%= f.text_field :address2, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label for="exampleInputEmail1">City</label>
           <%= f.text_field :city, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label for="exampleInputEmail1">State</label>
           <%= f.text_field :state, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label for="exampleInputEmail1">Zip</label>
           <%= f.text_field :zipcode, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="exampleInputEmail1">Phone</label>
           <%= f.text_field :phone, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="webaddress">Web Address</label>
           <%= f.text_field :webaddress, class: "form-control", placeholder: "https://www.abc.com"%>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="form-group">
          <label for="description">Description</label>
           <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-12">
          <div class="pull-right">
            <% if @building.present? %>
              <%= f.submit 'Next', class: "btn btn-primary", name: "subaction" %>
            <%else%>
              <%= f.submit 'Next', class: "btn btn-primary" %>
            <%end%>
          </div>
        </div>
      </div>
      
    </div>    
  <% end %>
</div>