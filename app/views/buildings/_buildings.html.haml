%h2
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    #filterrific_results{style: "margin-top: 10px;"}
      .table-overflow
        %table#sortable11.table
          %thead
            %tr
              %th
                PROPERTY(#{@buildings_count})
              %th ADDRESS
              %th{width: "8%"} Creation date
              %th{width: "12%"} Management
              %th Reviews
              %th Website
              %th Docs
              %th Featured by
              %th
              %th
          %tbody.table
            - buildings.each do |building|
              / - cache(building) do
              %tr
                %td
                  %span.propName
                    %b= link_to(building.building_name_or_address, building_path(building))
                    \-
                    ="#{building.uploads_count} images"
                  %br/
                  %small
                    = building.first_neighborhood
                    = '-' if (building.parent_neighbors.present? && building.first_neighborhood.present? )
                    = "#{building.parent_neighbors}"
                    = '-' if (building.parent_neighbors.present? && building.neighborhood3.present? )
                    = "#{building.neighborhood3}"
                %td
                  = building.street_address
                  = building.zipcode
                %td= building.created_at.strftime("%Y-%m-%d")
                %td.star-sm
                  =link_to building.management_company_name, no_fee_company_path(id: building.management_company), class: 'hyper-link' if building.management_company.present?
                  / = rating_for building, "building", disabled_after_rate: true, readonly: true
                %td= link_to "Reviews(#{building.reviews_count})", building_reviews_path(building_id: building.id)
                %td
                  = link_to globe_icon_helper, building.web_url, target: '_blank' if building.web_url.present?
                %td= building.uploads.with_doc.count
                %td= link_to building.featured_comps.count, featured_by_building_path(building)
                - if current_user
                  %td= link_to 'edit', edit_building_path(building)
                  - if current_user.has_role?(:admin)
                    %td
                      = link_to 'Delete', building_path(building), method: :delete, data: {confirm: 'Are you sure you want to delete this building?'}, class: 'text-danger' if @management_company.blank?
                      = link_to 'Disconnect', disconnect_building_building_path(building), class: 'text-danger', data: {confirm: 'Are you sure you want to discconect this building?'} if @management_company.present?