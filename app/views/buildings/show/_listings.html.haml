.row
	.col-lg-12
		%table.table.listings.show-section
			%thead
				%tr
					%th Date
					%th Apt#
					%th Rent
					%th Beds
					%th Baths
					%th Months Free
					%th.hidden-xs{width: '16%'} Date Available
					%th.hidden-xs OP
					%th.hidden-xs{width: '5%'} Rent Stabilize
			%tbody.table.table-borders
				- if listings.present?
					- colspan = browser.device.mobile? ? '6' : '9'
					= render 'listings/partials/listing_rows', listings: listings, type: type
					
					- if type == 'past' && @all_inactive_listings.present? && @all_inactive_listings.count > 5
						%tr
							%td.text-center{colspan: colspan}=link_to 'Show More Past Listings...', show_more_listings_path(building_id: @building.id, listing_type: 'past'), remote: true

- if type == 'past' && @building.past_listings.count > PastListing::LIMIT && request.format.js?
	.row
		.col-lg-12
			.text-center
				=link_to 'Show more...', load_more_past_listings_path(building_id: @building.id), class: 'load-more font-14 past-listings'
				= image_tag 'loader.gif', style: 'display:none;', class: 'loading-gif'
	%br