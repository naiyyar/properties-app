.summary
	.row
		.col-lg-12.col-md-12
			.add--assets{class: current_user&.admin? ? 'admin' : ''}=render 'uploads/add_photos', object: @building
	
	.row
		.col-xs-11.col-sm-8.col-md-8.col-lg-9
			%p.pageTitle{style: 'width: 100%;'}= @building.building_name_or_address
		
		.col-xs-1.col-sm-4.col-md-4.col-lg-3
			- if current_user&.admin?
				= link_to 'Edit', edit_building_path(@building), class: 'btn btn-o btn-default btn-xs pull-right btn-round', style: 'padding: 7px 16px;'
				= link_to 'Disconnect', disconnect_building_building_path(@building), class: 'pull-right btn btn-danger btn-o btn-xs btn-round', data: {confirm: 'Are you sure you want to discconect this building?'} if @manage_buildings.present?

			= render 'buildings/favourite', building: @building
	
	.row
		.col-xs-12.col-sm-12.col-md-12.col-lg-12= render 'property_info', object: @building 
  
	- unless @uploaded_images_count > 0
		.sliderLink
			%p.text-danger No photos are available.
			- if false && @video_tours.present?
				%a.btn.btn-o.btn-info.btn-sm.btn-round{href: '#video-tours'}
					%span.fa.fa-cube
					3D/Video Tour
				
			- if current_user&.admin?
				= add_tour_link(@building)
				= add_photos_link(@building, klass: 'btn-round')