- @distance_results.values.map do |st|
	.row
		- distance = st[:dresults].present? ? st[:dresults]['distance']['text'] : nil
		- if distance.present?
			.col-lg-6
				.pull-left
					- if st[:lines].present?
						- st[:lines].map do |line|
							.st-line-num{style: "background-color: #{line['color']}"}=line['line']

			.col-lg-6
				.text-left
					/ result['end_address'] => "Grand Central Terminal, 89 E 42nd St, New York, NY 10017, USA"
					%b= st[:dest_station]
					%p.font-sm.text-muted
						= "#{st[:dresults]['duration']['text']} walk," if st[:dresults].present?
						= "#{distance} away"