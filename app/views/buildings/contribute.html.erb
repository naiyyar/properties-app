<div class="tables">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
			<div class="panel-heading"><h3>What would you like to contribute ?</h3></div>
	    	<div class="panel-body">
		    	<%= render partial: 'layouts/shared/contribution_for' %>
			</div>
		</div>
		
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
			<div class="panel-heading"><h3>Building</h3></div>
  		<div class="panel-body">
				<div id="search-form">
					<%= form_tag "/reviews/new", method: :get, id: "search_item_form", class: "form-horizontal" do %>
	        	<%= hidden_field_tag :contribution, 'building_review', class: 'form-control building_contribution', id: 'building_contribution' %>
	        	<%= hidden_field_tag :user_id, current_user.present? ? current_user.id : '' %>
					<section class="app-content">
					    <div class="buildings-search">
					      	<%= text_field_tag 'buildings-search-txt',@building.present? ? @building.building_street_address : nil, class: "form-control", placeholder: 'Search building by name or address', "data-buildingid" => @building.present? ? @building.id : '' %>
					      	<div class="results" id="buildings-search-results"></div>
					      	<ul id="buildings-search-no-results" class="search-no-result"></ul>
					    </div>
				  	</section>
				  	<div class="pull-right margin-top-20">
					  	<% if params[:contribution_for].blank? %>
					  		<%= submit_tag 'Next', id: 'next_btn', class: 'btn btn-primary' %>
					  	<%end%>
			    	</div>
			  	<%end%>
				</div>
			</div>
			<br />
			
			<div class="col-xs-12 col-md-12 col-lg-12">
			    <div class="buildings-search unit-search">
			    	<div class="col-xs-12">
	     				 <div class="form-group">
					      <% unless @building.present? %>
					      	<%= text_field_tag 'units-search-txt', nil, class: "form-control unit-search hide", placeholder: 'Search unit by name'%>
					      <%else%>
					      	<%= text_field_tag 'units-search-txt', nil, class: "form-control unit-search", placeholder: 'Search unit by name'%>
					      <%end%>
				      </div>
				    </div>
			      	<div class="results" id="units-search-results"></div>
			      	<div class="col-xs-12">
			      		<ul id="units-search-no-results" class="search-no-result"></ul>
			      	</div>
			    </div>
		    </div>
			<div class="col-xs-11">
				<%= form_tag "/buildings", method: :post, id: "new_building", class: 'hide' do %>
					<%= hidden_field_tag :contribution, 'building_review', class: "form-control building_contribution" %>
					<%= render partial: 'buildings/building_contribute_form' %>
				    <div class="pull-right">
			      		<%= submit_tag 'Next', class: 'btn btn-primary', id: 'new_building_submit' %>
			      	</div>
				<%end%>
			</div>
			
			<div class="col-xs-12">
				<%= render partial: 'units/unit_contribute_form' %>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
  $(function() {
    new app.buildings;
    var building_id = $("#buildings-search-txt").data('buildingid');
    if(building_id != ''){
	    new app.units(building_id)
	  }
  });
   
</script>

<style type="text/css">
	#wrapper{
		margin: 20px 0 0 70px;
	}
	
	#leftSide {
    	top: 49px;
    }
</style>