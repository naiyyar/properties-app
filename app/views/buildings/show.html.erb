<div class="container">  
  <% if current_user %>
    <h3>Add Your Review</h3>
      <%= form_for @review do |f| %>
      
          <%= f.label :building_review_title %><br/>
          <%= f.text_field :building_review_title %>
      
        <%= f.hidden_field :building_id, value: @building.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>


        <%= f.submit %>
      <% end %>
     <% end %>

</div>


</br>
</br>


<div class="container">  

  <% @reviews.each do |review| %>
    <p> title: <%= review.building_review_title %></p>
<!--     <p> userID: <%= review.user_id %></p> -->
    <p> user: <%= review.user.email %></p>
    <p> <%= review.created_at %></p>
    <hr/>
  <% end %>

</div>




 

