<div class="summary">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <div class="summaryItem">
          <h1 class="pageTitle">
            <%= @building.building_name_or_address %> 
            <% if user_signed_in? %>
              <%= link_to "Edit", edit_building_path(@building), class: 'btn btn-o btn-default btn-xs pull-right' %>
            <%end%>
          </h1>
          <div class="address"><span class="icon-location-pin"></span> <%= @building.street_address %>, <%= @building.zipcode %></div>
          <div class="address"><span class="icon-location-pin"></span> <%= @building.neighborhood %></div>
          
          <ul class="rating">
            <%= rating_for @building, 'building', disable_after_rate: true, readonly: true %>
          </ul>
          <!-- <div class="favLink">(<%#=@building.reviews.count%>)</div> -->
          
          <% if @building.votes.present? %>
            <div class="favLink"><span class="icon-pipe"></span>
              <%= @building.recommended_percent.nan? ? '| None recommended yet' :  "| #{@building.recommended_percent.to_i}% Recommended" %>
            </div>
          <%end%>
          <div class="clearfix"></div>
          
          <div class="stats1 property_information">
            <span><%= @building.no_of_units ? "#{@building.no_of_units} Unit(s) -" : ' -- Units' %></span>
            <span><%= @building.floors ? "#{@building.floors} Floors -" : ' 0 Floors -' %></span>
            <span><%= @building.built_in ? "Built in #{@building.built_in}" : ' Built in 0000' %></span>
          </div>
          
          <div class="clearfix"></div>
          
          <%= render partial: 'property_contribute_links', locals: { object: @building } %>
          
          <div class="clearfix"></div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 hidden-xs hidden-sm hidden-md">
      <div class="agentAvatar summaryItem">
          <div class="clearfix"></div>
          <%#= image_tag 'avatar-2.png', class: "avatar agentAvatarImg", alt: 'Avatar' %>
          <!-- <div class="agentName">Jane Smith</div> -->
          <!-- <a data-toggle="modal" href="#contactAgent" class="btn btn-lg btn-warning contactBtn">Contact Agent</a> -->
          <%= link_to "<i class='fa fa-star'></i> Write a review".html_safe, new_building_review_path(building_id: @building), class: "btn btn-o btn-yellow contactBtn", 'data-no-turbolink' => false %>
            <% if user_signed_in? %>
              <%= link_to '<span class="fa fa-camera"><span> Add photos'.html_safe, new_building_upload_path(building_id: @building), class: "btn btn-o btn-gray contactBtn", 'data-no-turbolink' => false  %>
            <%else%>
              <%#= link_to '<span class="fa fa-camera"><span> Upload photos'.html_safe, '#signin', 'data-toggle' => 'modal', class: "btn btn-o btn-gray contactBtn hidden-xs", "data-no-turbolink" => false  %>
              <%= link_to '<span class="fa fa-camera"><span> Add photos'.html_safe, '#signin', class: 'btn btn-o btn-gray contactBtn', 'data-toggle' => 'modal'  %>
            <%end%>
      </div>
    </div>
  </div>
</div>