- content_for :page_title do
	= "#{@building.building_name}" if @building.building_name.present?
	= "#{@building.building_street_address}"

#street_view_btn.hidden-xs

- if screen_class == 'screen-lg'
	.row
		.col-lg-9{style: 'padding-right: 1px;'}
			#content{class: screen_class}= render 'buildings/show/top_summary_section', show_summary: false
			.clearfix
			#show-content
				#thumb-pager
					.col-lg-5
				.col-lg-8{style: 'width: 68%;'}
					= render 'buildings/show/content', show_summary: true
		.col-lg-3{style: 'padding-left: 0px;'}
			#mapView{class: screen_class}
				.mapPlaceholder
					%span.fa.fa-spin.fa-spinner 
					Loading map...
- else
	#mapView.mob-min{class: screen_class}
		.mapPlaceholder
			%span.fa.fa-spin.fa-spinner 
			Loading map...
	#pano

	#content.mob-max
		= render 'buildings/show/top_summary_section', show_summary: true
		= render 'buildings/show/content', show_summary: false

%br
.clearfix
= render 'layouts/home/footer'

#mapHash{'data-lat' => "#{@building.latitude.to_json}", 'data-lng' => "#{@building.longitude.to_json}", 'data-map' => "#{@gmaphash.to_json}"}
= hidden_field_tag :cu, current_user.present? ? current_user.id : nil
= hidden_field_tag :cu_building_id, @building.id

.addNewUnit= render 'new_unit_modal'

- if session[:after_contribute].present? || params[:from_uploaded].present?
	= render 'contribute_more_popup'
	:javascript
		$(document).ready(function(){
			$("#contribute_more").modal('show');
		});
  
	- session[:after_contribute] = nil

= render 'buildings/show/map_script'