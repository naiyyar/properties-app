- @submit_text = 'Save'
.row
  .col-6.col-md-6.col-lg-6
    - picker_class = @featured_by == 'admin' ? 'datetimepicker' : 'datepicker'
    .form-group
      %label Start Date
      = f.text_field :start_date, value: object.start_date.present? ? object.start_date&.to_s(:no_timezone) : nil,  class: "form-control #{picker_class}", :autocomplete => :off, disabled: object.featured_by_manager?

  .col-6.col-md-6.col-lg-6
    .form-group
      %label End Date
      = f.text_field :end_date, value: object.end_date.present? ? object.end_date.to_s(:no_timezone) : nil,  class: "form-control #{picker_class}", :autocomplete => :off, disabled: object.featured_by_manager?

- if @featured_by != 'admin'
  .row
    .col-6.col-md-6.col-lg-6
      .form-group
        - if object.kind_of?(FeaturedBuilding)
          - price = '$49.00'
          %label Featured Building Renewal
        - else
          - price = '$9.00'
          %label Featured Agent Renewal
    .col-6.col-md-6.col-lg-6
      .form-group
        .float-end= renew_switch_button(object)
  
  .row
    .col-lg-12
      %label When active, the card on file wil be charged #{price} two days before the end date for the next four week feature cycle.

%script{ src: "https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js", integrity: "sha512-AIOTidJAcHBH2G/oZv9viEGXRqDNmfdPVPYOYKGy3fti0xIplnlgMHUGfuNRzC6FkzIo0iIxgFnr9RikFxK+sw==", crossorigin: "anonymous"}
%link{ rel: "stylesheet", href: "https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css", integrity: "sha512-f0tzWhCwVFS3WeYaofoLWkTP62ObhewQ1EZn65oSYDZUg1+CyywGKkWzm8BxaJj5HGKI72PnMH9jYyIFz+GH7g==",crossorigin:"anonymous"}

:javascript
  $('.datetimepicker').datetimepicker({
    startDate: new Date(),
    format: 'Y-m-d H:i'
  })