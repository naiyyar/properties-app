%h2
.row
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    #filterrific_results{style: 'margin-top: 10px;'}
      .table-overflow
        %table.table.table-striped#sortable
          %thead
            %tr
              %th{width: '9%'} Feature ID(#{@featured_buildings.count})
              %th{style: 'width: 110px;'} Building
              %th{width: '16%'} Management
              %th{width: '10%'} Neighborhood1
              %th{width: '10%'} Neighborhood3
              %th{width: '6%'} Website
              %th{style: 'width: 110px;'} Start Date
              %th{style: 'width: 110px;'} End Date
              - unless params[:type] == 'featured'
                %th='Email' 
              %th{width: '6%'}
              %th{width: '6%'}
              %th{width: '6%'} Renew
              %th{width: '6%'} Active
          
          %tbody.table
            - @featured_buildings.each do |featured_building|
              - building = featured_building.building
              %tr
                %td=link_to featured_building.id, edit_featured_building_path(featured_building, featured_by: @featured_by)
                %td=link_to building.street_address, building_path(building)
                %td=link_to building.management_company.try(:name), '#'
                %td=link_to building.try(:neighborhood), '#'
                %td=link_to building.try(:neighborhood3), '#'
                
                %td
                  = link_to globe_icon_helper.html_safe, building.web_url, target: '_blank' if building.web_url.present?
                %td= start_date(featured_building)
                %td= end_date(featured_building)
                - unless params[:type] == 'featured'
                  %td
                    - if featured_building.featured_by_manager?
                      - if featured_building.draft?
                        = featured_building&.user&.try(:email)
                      - else 
                        = featured_building&.billings&.first&.user.try(:email)

                  %td
                    = link_to 'edit', edit_featured_building_path(featured_building, featured_by: @featured_by) unless featured_building.featured_by_manager?
                  %td
                    = link_to 'Delete', featured_building_path(featured_building), method: :delete, data: {confirm: 'Are you sure you want to delete this featured building?'}, class: 'text-danger' unless featured_building.featured_by_manager?
                  %td=renew_switch_button(featured_building, disabled: true)
                  %td=active_switch_button(featured_building)
                -else
                  %td 
                    = link_to 'edit', edit_featured_building_path(featured_building) if featured_building.draft? or featured_building.live?
                  %td
                    = link_to 'Delete', featured_building_path(featured_building), method: :delete, data: {confirm: 'Are you sure you want to delete this featured building?'}, class: 'text-danger' if featured_building.draft?
                  %td=renew_switch_button(featured_building, disabled: true)
                  %td=active_switch_button(featured_building, fbby: 'manager', showbillingurl: true)
