<div class="home-wrapper" style="padding: 20px 20px;">
  <div class="home-content neighborhood-container visible-xs visible-sm">
    <h2 class="osLight1">Popular NYC Neighborhoods</h2>
    <div class="row pb40">
      <% ['MANHATTAN', 'BROOKLYN','QUEENS','BRONX'].each do |area| %>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <div class="panel panel-default dd">
            <a href="#mddPanel<%=area%>" class="btn btn-o btn-primary btn-block btn-lg align-center btn-panel-collapsable" data-toggle="collapse"><%=area%> <%='(Coming Soon)' if area == 'BRONX'%><span class="fa fa-angle-down pull-right"></span></a>
            <div id="mddPanel<%=area%>" class="panel-collapse collapse">
              <div class="panel-body">
                <ul class="neighborhoods-list list-inline">
                  <% @manhattan_neighborhoods[area].sort.each do |nb| %>
                    <li><a href="javascript:void(0);" class="<%= area != 'BRONX' ? 'borough-neighborhood' : '' %>" data-nhname="<%=searchable_text(nb,area)%>"><%= nb %></a></li>
                  <%end%>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
  <div class="home-content neighborhood-container hidden-xs hidden-sm">
    <h2 class="osLight1">Popular NYC Neighborhoods</h2>
    <div class="row pb40">
      <% ['MANHATTAN', 'BROOKLYN','QUEENS','BRONX'].each do |area| %>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <h3 class="align-left nh-area-name"><%= area %> <%='(Coming Soon)' if area == 'BRONX'%></h3>
          <ul class="neighborhoods-list">
            <% @manhattan_neighborhoods[area].sort.each do |nb| %>
              <li><a href="javascript:void(0);" class="<%= area != 'BRONX' ? 'borough-neighborhood' : '' %>" data-nhname="<%=searchable_text(nb,area)%>"><%= nb %></a></li>
            <%end%>
          </ul>
        </div>
      <%end%>
    </div>
  </div>
</div>