.home-footer
  .home-wrapper
    .row
      .col-xs-6.col-sm-6.col-md-3.col-lg-3.hidden-xs.hidden-sm

      .col-xs-6.col-sm-6.col-md-3.col-lg-3
        .osLight.footer-header Company
        %ul.footer-nav.pb20
          %li
            %a{href: '/about'} About Us
          %li
            %a{href: 'javascript:;'} Advertise With Us
            = render 'layouts/shared/advertise_items', classes: 'list-unstyled', styles: 'padding: 8px 16px 0px;', font: 'font-14'
          %li
            %a{href: '/blog'} Blog
          %li
            %a{href: tos_path, target: '_blank'} Terms Of Services

      .col-xs-6.col-sm-6.col-md-3.col-lg-3
        .osLight.footer-header Get In Touch
        %ul.footer-nav.pb20
          %li
            %a{href: 'mailto:hello@transparentcity.co'} Email Us
          %li.invisible
            %a{href: '#'} xxxxx
          %li
            %a.btn.btn-sm.btn-icon.font-md{href: 'https://www.facebook.com/transparentcityllc', target: 'new', title: 'Transparentcity Facebook Page'}
              %span.fa.fa-facebook
            %a.btn.btn-sm.btn-icon.font-md{href: 'https://twitter.com/transprentcity', target: 'new', title: 'Transparentcity Twitter Page'}
              %span.fa.fa-twitter
            %a.btn.btn-sm.btn-icon.font-md{href: 'https://www.instagram.com/transprentcity', target: 'new', title: 'Transparentcity Instagram Page'}
              %span.fa.fa-instagram
            %a.btn.btn-sm.btn-icon.font-md{href: 'https://www.linkedin.com/company/transparentcity', target: 'new', title: 'Transparentcity Linkedin Page'}
              %span.fa.fa-linkedin
    
    .copyright.padding-top-20
      transparentcity Â© #{Date.today.year}
  
    - unless request.url.include?('www.transparentcity.co')
      %br
      .text-center
        = image_tag 'buttercms_logo/butter-w.png', width: '150', height: '38', alt: 'buttercms_logo'

