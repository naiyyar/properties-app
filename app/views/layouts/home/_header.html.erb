<a href="#" class="home-navHandler visible-xs"><span class="fa fa-bars"></span></a>
<div class="home-header">
  <div class="home-logo osLight"><%=image_tag 'logo1.png', alt: 'logo', width: '200' %></div>

  <!-- warning: should not be visible on contribute related pages -->
  <div class="pull-right btn-contribute btn-contribute-home">
    <%=link_to '<span class="fa fa-plus"></span>'.html_safe, contribute_buildings_path, class: 'btn btn-blue' %>
  </div>
  
  <div class="home-nav">
    <% if user_signed_in? %>
      <div class="pull-right hidden-xs home-header-userProfile">
        <%=render partial: 'layouts/shared/user_profile' %>
      </div>
    <%end%>
    <ul class="homeNavUl">
      <li>
        <a href="/buildings/contribute" class="visible-xs"><span class="icon-plus"></span><span class="navLabel"> Write a review</span></a>
      </li>
      <% unless user_signed_in? %>
        <li><a href="#" data-toggle="modal" data-target="#signin">Sign In</a></li>
        <li><a href="#" data-toggle="modal" data-target="#signup">Sign Up</a></li>
      <%end%>
      
      <% if user_signed_in? %>
        <% if current_user.has_role?(:admin) %>
          <li>
            <a href="<%= buildings_path %>"><span class="fa fa-building"></span> Buildings</a></li>
          </li>
          <li>
            <a href="<%= units_path %>"><span class="fa fa-building"></span> Units</a></li>
          </li>
        <%end%>
      <%end%>
    </ul>
  </div>
</div>

<% if user_signed_in? %>
  <div class="mobView visible-xs">
    <%=render partial: 'layouts/shared/user_profile' %>
  </div>
<%end%>