.home-header
  .pull-left
    - unless params[:controller].include?('buttercms')
      %a.home-navHandler.ssm-toggle-nav1.visible-xs.visible-sm{href: 'javascript:void(0);'}
        %span.fa.fa-bars
    - else
      %a.home-navHandler{href: '/blog'}
        %span.fa.fa-home
        %strong.hidden-xs blog


  .home-logo.osLight
    %a{href: '/'}= image_tag 'logo4.png', alt: 'logo', width: '100%'
  
  .home-nav.pull-left
    %ul.homeNavUl
      %li.no-hover-underline.parent
        %a{href: '/about'} About
      %li.no-hover-underline.parent
        %a{href: advertise_with_us_path } Advertise
      %li.no-hover-underline.parent
        %a{href: '/blog'} Blog
      %li.no-hover-underline.parent
        %a{href: contribute_buildings_path} Write Review
  
  / for large devices
  .home-nav
    %ul.homeNavUl{style: 'position: relative;'}
      - unless user_signed_in?
        %li.no-hover-underline.parent
          %a{href: '/users/sign_in'} Sign In
          &nbsp;
          %a{href: '/users/sign_up'} Sign Up
      - else
        %li.no-hover-underline.parent
          = render 'layouts/shared/admin_nav_items'
        %li.no-hover-underline.parent
          %a{href: managertools_user_path(current_user, type: 'featured')} Manager Tools
        %li.no-hover-underline.parent
          = render 'layouts/shared/user_profile'

- if user_signed_in?
  .mobView.visible-xs.visible-sm
    = render partial: 'layouts/shared/user_profile'