<!DOCTYPE html>
<html>
  <head>
    <%= render partial: 'layouts/layout_head', locals: { js_path: 'home/jquery.init' } %>
    <%= layout_stylesheet_link 'home/main' %>
  </head>
  
  <body class="notransition no-hidden" style="margin: 0px; padding: 0px;">
    <%= render partial: 'layouts/shared/flash_messages', flash: flash  %>
    <%= render partial: 'layouts/shared/left_side' if browser.device.mobile? %>
    
    <div id="apt-ajax-loader" style='display: none;'>
      <div><span class="fa fa-spin fa-4x fa-spinner"></span></div>
    </div>
    
    <%= render partial: 'layouts/home/header' %>
    
    <% if browser.device.mobile? %>
      <div id="search-modal" class="modal-full" style='display: none;'>
        <div class='header'>
          <div class="row">
            <div class="col-xs-1">
              <span class="fa fa-arrow-left fa-2x"></span>
            </div>
            <div class="col-xs-11">
              <%= render 'home/search_form' %>
            </div>
          </div>
        </div>
      </div>
      <style type="text/css">
        .ui-autocomplete{ z-index: 10000; max-height: 450px !important;}
      </style>
    <%end%>
    
    <div class="content-wrapper <%= controller_name + action_name %>">
      <%= yield %>
    </div>
    
    <div id="remote-container"></div>
    <div id="auth-form"></div>
    
    <%= render 'layouts/home/footer' %>
    
    <%= javascript_include_tag 'home/main', defer: true %>
    <%= render 'buildings/favourite_script' %>
    <%= javascript_include_tag 'home' %>

    <script type="text/javascript">
      $(function(){ new app.apartments; });
    </script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=<%=ENV['GOOGLE_TRACKING_ID']%>"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', "<%=ENV['GOOGLE_TRACKING_ID']%>");
    </script>
  </body>
</html>
