<div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
  <ul class="neighborhoods-list">
    <% area = 'MANHATTAN' %>
    <b id="lower_manhattan">
      <%= search_by_neighborhood_link('Lower Manhattan', area) %> </b>
      <!-- (<span><%#=@lower_manhattan_count%></span>) -->
    <% lower_manhattan_sub_borough.each do |borough| %>
      <li data-parent="lower_manhattan"><%= search_by_neighborhood_link(borough, area) if borough != 'West Village'%>
        <% if borough == 'Greenwich Village' %>
          <ul>
            <li data-parent="lower_manhattan"><%= search_by_neighborhood_link('West Village', area) %></li>
          </ul>
        <%end%>
      </li>
    <%end%>
