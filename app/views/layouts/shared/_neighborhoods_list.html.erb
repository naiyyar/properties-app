<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
  <ul class="neighborhoods-list">
    <% area = 'MANHATTAN' %>
    <b id="lower_manhattan"><%= search_by_neighborhood_link('Lower Manhattan', area) %> </b>
    <div class="child-borough-container">
      <% lower_manhattan_sub_borough.each do |borough| %>
        <% if borough != 'West Village' %>
          <li data-parent="lower_manhattan" class="parent">
            <%= search_by_neighborhood_link(borough, area)%>
            <% if borough == 'Greenwich Village' %>
              <ul>
                <li data-parent="lower_manhattan"><%= search_by_neighborhood_link('West Village', area) %></li>
              </ul>
            <%end%>
          </li>
        <%end%>
      <%end%>
    </div>
