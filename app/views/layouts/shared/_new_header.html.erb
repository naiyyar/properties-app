<header class="HeaderBlock">       
  <div class="Header <%=home_page? ? 'home-page' : 'other-page'%>">
    <% unless blog_view? %>
      <a href='javascript:void(0);' class="home-navHandler d-block d-lg-none d-md-none" data-bs-toggle="menu" aria-label="Nav Handler">
        <span class="fa fa-bars"></span>
      </a>
    <%end%>

    <div class="Container">
      <% if blog_view? %>
        <div class="blog-header-icon pull-left">
          <a href='/blog' class="home-navHandler">
            <span class='fa fa-home'></span>
            <strong class='d-none d-md-block'>blog</strong>
          </a>
        </div>
      <%end%>
      
      <div class="Header-logoDesktop">
        <a href="/" class="Logo">
          <%= image_tag 'transparentcity-logo-black-blue.png', alt: alt_text, width: '146', height: '40', class: 'Logo-image' %>
        </a>
      </div>

      <div id='Left-navContainer' class="d-none d-md-inline-block">
        <ul class="Header-nav float-start">
          <li class="Header-navListItem">
            <%= link_to 'About', '/about', class: 'Header-navText' %>
          </li>
          
          <li class="Header-navListItem dropdown">
            <a href="#" class="dropdown-toggle no-hover-underline Header-navText" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownMenuLink">
              Advertise
              <!-- <span class="fa fa-chevron-down"></span> -->
            </a>
            <div class="dropdown-menu userMenu admin advertise-menu" role='menu' aria-labelledby="dropdownMenuLink">
              <%= render 'layouts/shared/advertise_items', classes: '', styles: '', font: 'font-16' %>
            </div>
          </li>
          <li class="Header-navListItem">
            <%= link_to 'Blog', '/blog', class: 'Header-navText' %>
          </li>

          <li class="Header-navListItem">
            <%= link_to 'Write Review', contribute_buildings_path, class: 'Header-navText' %>
          </li>
        </ul>
      </div>

      <ul class="Header-nav float-end d-none d-md-inline-block">
        <% unless user_signed_in? %>
          <li class="Header-navListItem">
            <a href='/users/sign_in' class="Header-navText"> Sign In</a>
          </li>
          <li class="Header-navListItem">
            <a href='/users/sign_up' class="Header-navText"> Sign Up</a>
          </li>
        <%else%>
          <li class="Header-navListItem">
            <%= render 'layouts/shared/admin_nav_items' %>
          </li>
          <li class="Header-navListItem">
            <%= render 'layouts/shared/tools_nav' %>
          </li>
          <li class="Header-navListItem">
            <%= render 'layouts/shared/user_profile' %>
          </li>
        <%end%>
      </ul>
    </div>
  </div>
</header>

