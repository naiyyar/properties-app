- if mobile?
  .header2
    - if show_filters?
      .row
        .col-xs-12
          %h1.font-14.font-bold{style: 'margin: 3px 0px;'}= split_view_header

      .sorted_by_option{style: "width: 100%;background: #fff; display: #{custom_search? ? 'none' : 'block'}"}
        .row
          .col-6.count{style: 'padding-right: 1px;width: 53%;'}
            %div.counts= "#{@listings_count.to_i} Rentals | #{@buildings_count.to_i} Buildings"
          
          .col-6.sort-options{style: 'width: 47%;'}
            .sorted-by.d-inline-flex{style: 'margin-bottom: 1px;'} Sorted By:
            %label.select.d-inline-flex{style: 'margin-bottom: 1px;'}
              = select_tag :sort, options_for_select(sort_options, params[:sort_by]), { data: {search_term: params[:search_term], neighborhoods: params[:neighborhoods] }, style: 'color: #2272e2;border-color: transparent;height: 25px; padding: 0px 0px;width: 114px;' }
              %i.sort

  :css
    .header2 {
      margin-bottom: 2px;
      box-shadow: 0px 2px 6px rgb(0 0 0 / 20%);
      -webkit-box-shadow: 0px 2px 6px rgb(0 0 0 / 20%);
      -moz-box-shadow: 0px 2px 6px rgb(0 0 0 / 20%);
    }
    .sorted_by_option .col-6.sort-options{
      padding-left: 0px;
      padding-right: 0px;
    }