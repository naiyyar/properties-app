.visible-xs
  #header-mob
    .row{style: 'margin-right: 0px;'}
      .col-xs-1
        %a.navHandler{href: 'javascript:void(0)'}
          %span.fa.fa-bars
      %div{class: "col-xs-#{header_center_col}", style: "padding-right: #{current_view == 'other-view' ? '6px' : '2px'}; padding-left: #{current_view == 'other-view' ? '6px' : '2px'}"}
        .split-view-seach{class: "#{search_bar(:hidden)}"}
          %span.fa.fa-times-circle.fa-2x.clearSearchText{style: "right: #{clear_link_from_right}px;"}
          = render partial: 'home/search_form' if browser.device.mobile?
     
      %div{class: "col-xs-#{header_right_col}"}
        .row{style: 'margin-right: -1px;'}
          .hood.col-xs-6
            .btn-hoods{class: current_view}
              %button.btn.btn-primary.dropdown-toggle-neighborhoods.btn-round{class: "#{params[:neighborhoods].present? ? 'active' : ''}", 'data-toggle' => 'dropdown1'}
                %span.dropdown-label Hood
                %span.caret

          - if show_filters?
            .col-xs-6.h-filter
              .btn-filter{style: 'margin-left: 3px;'}
                %button.btn.btn-primary.btn-filter.handleFilter.btn-round
                  %span.dropdown-label
                    %span.fa.fa-filter
                    Filter
                    %span.filter-counts

  .visible-xs{style: 'position: fixed; bottom: 10px;left: 50%;transform: translate(-50%, 0%);z-index: 99;'}
    - if action_name == 'search' || @show_map_btn
      %a.mapHandler.btn.btn-green.btn-round{href: 'javascript:void(0);', style: custom_search? ? 'display: none;' : ''}
        %span.fa.fa-map-o
        Map
      %a.listHandler.btn.btn-green.btn-round{href: 'javascript:void(0);', style: custom_search? ? 'display: block;' : ''}
        %span.fa.fa-list
        List

%div.hidden-xs
  %a.navHandler{href: 'javascript:void(0);'}
    %span.fa.fa-bars
  
  #header
    .logoContainer
      .logo
        %a{href: '/'}= image_tag 'logo_white.png', alt: 'logo'
      - if !browser.device.mobile?
        #search-row{class: "search #{search_bar(:hidden)}"}= render partial: 'layouts/shared/search_form'

      .pull-right.nav-items.headerLinks.visible-lg{style: 'color: #ddd;', class: !user_signed_in? ? 'no-signedin' : 'signedin'}
        %ul.list-inline.shared-header{style: 'margin-bottom: 0px;'}
          - if user_signed_in?
            %li= link_to 'Blog', '/blog'
            %li= link_to 'Manager Tools', managertools_user_path(current_user, type: 'featured')
            %li= render partial: 'layouts/shared/user_profile'
          - else
            - if controller_name == 'sessions'
              %li= link_to 'Sign Up', '/users/sign_up'
            - elsif controller_name == 'registrations'
              %li= link_to 'Sign In', '/users/sign_in'
            - else
              %li= link_to 'Sign In', '/users/sign_in'
              %li= link_to 'Sign Up', '/users/sign_up'

      .pull-right.headerLinks.write-review= link_to 'Write Review', contribute_buildings_path, class: 'btn btn-white btn-o btn-clear btn-round'