#header
  .logoContainer
    .logo.hidden-xs
      %a{href: "/"}= image_tag 'logo_white.png', alt: 'logo'
    #search-row{class: "search #{search_bar(:hidden)}"}
      = render partial: 'layouts/shared/search_form'
    .pull-right.btn-hoods.visible-xs
      %button{class: "btn btn-green dropdown-toggle-neighborhoods #{params[:neighborhoods].present? ? 'active' : ''}", "data-toggle" => "dropdown1"}
