        %span.caret

    .pull-right.headerLinks.hidden-xs{style: 'color: #ddd;'}
      - if !user_signed_in?
        - if params[:controller] == "users/sessions"
          = link_to 'Sign Up', '/users/sign_up'
        - elsif params[:controller] == "users/registrations"
          = link_to 'Sign In', '/users/sign_in'
        - else
          = link_to 'Sign Up', '/users/sign_up'
          |
          = link_to 'Sign In', '/users/sign_in'
      - else
        .hidden-xs.hidden-sm{style: "display: inline-block;"}
          = render partial: 'layouts/shared/user_profile'

    .pull-right.headerLinks.write-review.hidden-xs
      = link_to 'Write Review', contribute_buildings_path, class: 'btn btn-white btn-o btn-clear'
    
  
  .visible-xs{style: "position: fixed; bottom: 10px;"}
    - if params[:action] == 'search' or @show_map_btn
      %a.mapHandler.btn.btn-green{href: "javascript:void(0);", style: custom_search? ? 'display: none;' : ''}
        %span.icon-map
