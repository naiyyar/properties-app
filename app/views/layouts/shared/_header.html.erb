<div id="header">
  <a href="#" class="navHandler"><span class="fa fa-bars"></span></a>
  <div class="logo">
    <a href="/"><%=image_tag 'logo1.png', alt: 'logo', class: 'hidden-xs' %><%=image_tag 'logo_white.png', alt: 'logo', class: 'visible-xs' %></a>
  </div>
    
  <div class="search <%= search_bar(:hidden) %>">
    <%= render partial: 'layouts/shared/search_form' %>
  </div>
  
  <% if user_signed_in? %>
    <div class="pull-right shared_contribute_btn <%=search_bar(:hidden)%>">
      <%=link_to '<span class="fa fa-plus"></span>'.html_safe, contribute_buildings_path, class: 'btn btn-blue' %>
    </div>
    <div class="hidden-xs">
      <%=render partial: 'layouts/shared/user_profile' %>
    </div>
    <% if params[:action] == 'search' %>
      <a href="javascript:void(0);" class="mapHandler"><span class="icon-map"></span></a>
      <a href="javascript:void(0);" class="listHandler"><span class="icon-list"></span></a>
    <%elsif (params[:controller] == 'buildings' and params[:action] == 'show') or (params[:controller] == 'units' and params[:action] == 'show') %>
      <a href="javascript:void(0);" class="mapHandlerShow"><span class="icon-map"></span></a>
      <a href="javascript:void(0);" class="listHandlerShow"><span class="icon-list"></span></a>
    <%end%>
  <%else%>
    <% if params[:action] == 'search' %>
      <a href="#" class="mapHandler"><span class="icon-map"></span></a>
      <a href="#" class="listHandler"><span class="icon-list"></span></a>
    <%elsif (params[:controller] == 'buildings' and params[:action] == 'show') or (params[:controller] == 'units' and params[:action] == 'show') %>
      <a href="#" class="mapHandlerShow"><span class="icon-map"></span></a>
      <a href="#" class="listHandlerShow"><span class="icon-list"></span></a>
    <%end%>
    <div class="home-nav">
      <ul class="homeNavUl">
        <li><a href="#" class='btn btn-default' data-toggle="modal" data-target="#signup">Sign Up</a></li>
        <li><a href="#" class='btn btn-default' data-toggle="modal" data-target="#signin">Sign In</a></li>
        <li class="<%=search_bar(:hidden)%>"><%=link_to '<span class="fa fa-plus"></span>'.html_safe, contribute_buildings_path, class: 'btn btn-blue' %></li>
        <li></li>
      </ul>
    </div>
  <%end%>
</div>