<div id="header">
  <div class="logo">
    <a href="/">
      <%=image_tag 'logo1.png', alt: 'logo' %>
    </a>
  </div>
    
  <a href="#" class="navHandler"><span class="fa fa-bars"></span></a>
    
  <div class="search">
    <%= render partial: 'layouts/shared/search_form' %>
  </div>
  <% if user_signed_in? %>
    <div class="pull-right shared_contribute_btn">
      <%=link_to '<span class="fa fa-plus"></span>'.html_safe, contribute_buildings_path, class: 'btn btn-blue' %>
    </div>
    <div class="headerUserWraper">
      <a href="#" class="userHandler dropdown-toggle" data-toggle="dropdown"><%= image_tag current_user.avatar, alt: 'avatar', class: 'avatar', style: 'width:30px;height:30px;' %></a>
      <a href="#" class="headerUser dropdown-toggle" data-toggle="dropdown">
          <%= image_tag current_user.avatar, class: "avatar headerAvatar pull-left", alt: 'Avatar'%>
          <div class="userTop pull-left">
              <span class="headerUserName"><%= current_user.present? ? current_user.user_name.capitalize : '' %> </span> <span class="fa fa-angle-down"></span>
          </div>
          <div class="clearfix"></div>
      </a>
      <div class="dropdown-menu pull-right userMenu" role="menu">
        <div class="mobAvatar">
            <%= image_tag current_user.avatar, alt: 'avatar', class: 'avatar mobAvatarImg' %>
            <div class="mobAvatarName"><%= current_user.present? ? current_user.user_name : '' %></div>
        </div>
        <ul>
          <li><a href="<%= edit_user_path(current_user) %>"><span class="icon-settings"></span>Settings</a></li>
          <li><a href="<%= user_path(current_user) %>"><span class="icon-user"></span>Profile</a></li>
          <li class="divider"></li>
          <li><%= link_to '<span class="icon-power"></span>Logout'.html_safe, destroy_user_session_path, :method => :delete %> </li>
        </ul>
      </div>
    </div>
    <a href="#" class="mapHandler"><span class="icon-map"></span></a>
  <%else%>
    <a href="#" class="mapHandler"><span class="icon-map"></span></a>
    <div class="home-nav">
    <ul>
      <li><a href="#" class='btn btn-default' data-toggle="modal" data-target="#signup">Sign Up</a></li>
      <li><a href="#" class='btn btn-default' data-toggle="modal" data-target="#signin">Sign In</a></li>
      <li class="list_property"><%=link_to '<span class="fa fa-plus"></span>'.html_safe, contribute_buildings_path, class: 'btn btn-blue' %></li>
      <li></li>
    </ul>
  </div>
  <%end%>
</div>