#leftSide{class: "#{contribute_left_side(params)} #{home_page? ? 'home' : ''}"}
  %nav.leftNav.scrollable
    %ul
      %li.logo.visible-xs.text-center
        %a{href: '/'}= image_tag 'transparentcity-logo-white-gray.png', alt: alt_text, width: '170', height: '50'
      
      - if current_user.blank?
        %li
          %a{href: '/about'}
            %span.navLabel About us
        %li.hasSub
          %a{href: 'javascript:;'}
            %span.navLabel Advertise
            %span.fa.fa-angle-left.arrowRight
          = render 'layouts/shared/advertise_items', classes: '', styles: '', font: 'font-16'
        %li
          %a{href: '/blog'}
            %span.navLabel Blog
        %li.btn_contribute
          %a{href: contribute_buildings_path}
            %span.navLabel Write a review

        - if controller_name == 'registrations'
          %li
            %a.left-side-zindex.auth{href: '/users/sign_in'}
              %span.navLabel Sign In
        
        - elsif controller_name == 'sessions'
          %li
            %a.left-side-zindex.auth{href: '/users/sign_up'}
              %span.navLabel Sign Up
        - else
          %li
            %a.left-side-zindex.auth{href: '/users/sign_in'}
              %span.navLabel Sign In
          %li
            %a.left-side-zindex.auth{href: '/users/sign_up'}
              %span.navLabel Sign Up
      
      - elsif current_user.present?
        %li.btn_contribute
          %a{href: saved_buildings_user_path(current_user)}
            %span.navLabel Saved

        %li.btn_contribute
          %a{href: contribute_buildings_path}
            %span.navLabel Write a review

        %li
          %a{href: '/about'}
            %span.navLabel About us
        %li.hasSub
          %a{href: 'javascript:;'}
            %span.navLabel Advertise
            %span.fa.fa-angle-left.arrowRight
          = render 'layouts/shared/advertise_items', classes: '', styles: '', font: 'font-16'
          
        %li.hasSub
          %a{href: 'javascript:;'}
            %span.navLabel Tools
            %span.fa.fa-angle-left.arrowRight
          
          %ul
            - tool_nav_helper.each do |item|
              %li=link_to item[:title], item[:url], class: 'font-16'

        %li.btn_contribute
          %a{href: edit_user_path(current_user)}
            %span.navLabel Settings

        - if current_user.admin?
          %li.hasSub
            %a{href: 'javascript:;'}
              %span.navLabel Admin
              %span.fa.fa-angle-left.arrowRight
            
            %ul
              - StaticData::ADMIN_NAV_MENU.each do |nav|
                %li
                  %a{href: nav[:url]}
                    %span.navLabel= nav[:title]

        %li.btn_contribute
          %a{href: destroy_user_session_path, 'data-method' => 'delete' }
            %span.navLabel Sign Out
