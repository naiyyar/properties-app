#leftSide{class: "#{contribute_left_side(params)} #{home_page? ? 'home' : ''}"}
  %nav.leftNav.scrollable
    %ul
      %li.logo.d-block.d-lg-none.d-md-none.text-center
        %a{href: '/'}= image_tag 'transparentcity-logo-white-gray.png', alt: alt_text, width: '170', height: '50'
      
      - if current_user.blank?
        %li
          %a.navLabel{href: '/about'}  About us
        %li.hasSub
          %a.navLabel{href: 'javascript:;'} 
            Advertise
            %span.fa.fa-angle-left.arrowRight
          = render 'layouts/shared/advertise_items', classes: '', styles: '', font: 'font-16'
        %li
          %a.navLabel{href: '/blog'} Blog
        %li.btn_contribute
          %a.navLabel{href: contribute_buildings_path}  Write a review

        - if controller_name == 'registrations'
          %li
            %a.navLabel.left-side-zindex.auth{href: '/users/sign_in'} Sign In
        
        - elsif controller_name == 'sessions'
          %li
            %a.navLabel.left-side-zindex.auth{href: '/users/sign_up'} Sign Up
        - else
          %li
            %a.navLabel.left-side-zindex.auth{href: '/users/sign_in'} Sign In
          %li
            %a.navLabel.left-side-zindex.auth{href: '/users/sign_up'} Sign Up
      
      - elsif current_user.present?
        %li.btn_contribute
          %a.navLabel{href: saved_buildings_user_path(current_user)} Saved

        %li.btn_contribute
          %a.navLabel{href: contribute_buildings_path} Write a review

        %li
          %a.navLabel{href: '/about'} About us
        %li.hasSub
          %a.navLabel{href: 'javascript:;'} 
            Advertise
            %span.fa.fa-angle-left.arrowRight
          = render 'layouts/shared/advertise_items', classes: '', styles: '', font: 'font-16'
          
        %li.hasSub
          %a.navLabel{href: 'javascript:;'} 
            Tools
            %span.fa.fa-angle-left.arrowRight
          
          %ul
            - tool_nav_helper.each do |item|
              %li=link_to item[:title], item[:url], class: 'font-16'

        %li.btn_contribute
          %a.navLabel{href: edit_user_path(current_user)} Settings

        - if current_user.admin?
          %li.hasSub
            %a.navLabel{href: 'javascript:;'} 
              Admin
              %span.fa.fa-angle-left.arrowRight
            
            %ul
              - StaticData::ADMIN_NAV_MENU.each do |nav|
                %li
                  %a.navLabel{href: nav[:url]}= nav[:title]

        %li.btn_contribute
          %a.navLabel{href: destroy_user_session_path, 'data-method' => 'delete' } Sign Out
