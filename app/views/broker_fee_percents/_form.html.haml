.modal.fade{id: 'editBrokerFeePercentModal', tabindex: "-1", role: "dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.btn-close{'aria-label' => 'Close', 'data-bs-dismiss' => 'modal', type: 'button'}
      
      .modal-body.no-padding
        = form_for broker_fee_percent, html: { class: 'form-horizontal1' } do |f|
          %fieldset
            .row.mb-3
              .col-12.col-sm-12.col-md-6.col-lg-6
                .form-group
                  %label Percent
                  = f.number_field :percent_amount, class: 'form-control', min: 0
                 
                
            .row.mb-3
              .col-lg-12
                .float-end
                  = link_to 'Cancel', '#', class: 'btn btn-default', 'data-bs-dismiss' => 'modal'
                  = f.submit 'Submit', class: 'btn btn-primary'