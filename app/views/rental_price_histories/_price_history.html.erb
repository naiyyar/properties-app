<div class="table-responsive">
  <table class="table table-bordered table-striped price-history-table">
    <thead>
      <tr>
        <th></th>
        <th width="12%">Resident from</th>
        <th width="12%">Resident to</th>
        <th>Rent</th>
        <th>Rent Up Front</th>
        <th>Refundable deposits</th>
        <th>Broker Fee</th>
        <th>Non-refundable costs</th>
        <th>Total Money upfront</th>
        <% if current_user and current_user.has_role?(:admin)  %>
          <th></th><th></th>
        <%end%>
      </tr>
    </thead>
    <% @rental_price_histories = @unit.rental_price_histories if @unit.present? %>
    <% @rental_price_histories.order('created_at desc').each do |rental_price| %>
  		<tr>
        <td><%= link_to rental_price.unit.name, unit_path(rental_price.unit) if rental_price.unit.present?%></td>
  			<td><%= rental_price.res_start_year if rental_price.res_start_year.present? %></td>
  			<td><%= rental_price.res_end_year if rental_price.res_end_year.present? %></td>
  			<td class="text-right"><%= number_to_currency(rental_price.monthly_rent, precision: 0) %></td>
  			<td class="text-right"><%= number_to_currency(rental_price.rent_upfront, precision: 0) %></td>
  			<td class="text-right"><%= number_to_currency(rental_price.refundable_deposits, precision: 0) %></td>
  			<td class="text-right"><%= number_to_currency(rental_price.broker_fee, precision: 0) %></td>
  			<td class="text-right"><%= number_to_currency(rental_price.non_refundable_costs, precision: 0) %></td>
  			<td class="text-right"><%= number_to_currency(rental_price.rent_upfront + rental_price.non_refundable_costs + rental_price.broker_fee + rental_price.refundable_deposits, precision: 0) %></td>
        <% if current_user and current_user.has_role?(:admin)  %>
          <td><%= link_to "edit", edit_rental_price_history_path(rental_price) %></td>
          <td><%= link_to "Delete", rental_price_history_path(rental_price), method: :delete, data: {confirm: "Are you sure you want to delete rent information"}, class: 'text-danger'%></td>  
        <%end%>
  		</tr>
  	<%end%>
  </table>
</div>