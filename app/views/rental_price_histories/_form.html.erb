<div class="tables">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <b><%= @title %> #<%= link_to @unit.name, unit_path(@unit), 'data-no-turbolink' => false if @unit.present? %> </b>
        </div>
        <div class="panel-body">
          <%= form_for(@rental_price_history) do |f| %>
            <%= hidden_field_tag 'contribution', params[:contribution] %>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="form-group">
                  <% if @rental_price_history.unit.present? %>
                    <label>Building Address</label>
                    <%= text_field_tag 'building_street_address', building_street_address(@rental_price_history.unit.building),  class: 'form-control', disabled: 'disabled'%>
                  <%end%>
                  <%= hidden_field_tag 'contribution', params[:contribution_for] %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Resident From*</label>
                  <%#= f.text_field :residence_start_date, class: 'form-control datepicker validate' %>
                  <%= f.select :start_year, options_for_select(years), { prompt: '' },  { class: 'form-control validate' } %>
                  <span class="text-red hidden start_validation_error_message">Year must be earlier</span>
                  <% if @unit.present? %>
                    <%= f.hidden_field :unit_id, value: @unit.id %>
                  <%end%>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                  <label>Resident To</label>
                  <%#= f.text_field :residence_end_date, class: "form-control datepicker" %>
                  <%= f.select :end_year, options_for_select(years), { prompt: '' },  { class: 'form-control' } %>
                  <span class="text-red hidden validation_error_message">Year must be later</span>
                </div>
                
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Monthly Rent $*</label>
                  <%= f.number_field :monthly_rent, class: "form-control validate"%>
                  <!-- <p class="help-block">This field is required</p> -->
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Broker Fee $</label>
                  <%= f.number_field :broker_fee, class: "form-control"%>  
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Non Refundable Costs $</label>
                  <div class="input-group">
                    <%= f.number_field :non_refundable_costs, class: "form-control"%>
                    <span class="input-group-addon" data-toggle="tooltip" data-placement="left"  aria-hidden="true" title="Combined non refundable costs upfront, not including broker fee.  Ex. Building Processing Fees, Credit Check Fees, General Misc Fees">
                      <i class="fa fa-question-circle"></i>
                    </span>
                  </div>
                </div>
              </div>
              
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Rent Up Front $</label>
                   <div class="input-group">
                     <%= f.number_field :rent_upfront, class: "form-control"%>
                     <span class="input-group-addon" data-toggle="tooltip" data-placement="left" aria-hidden="true" title="Usually, rent for the first and last month. Refundable deposits are separate such as security deposits">
                      <i class="fa fa-question-circle"></i>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Refundable Deposits $</label>
                   <div class="input-group">
                    <%= f.number_field :refundable_deposits, class: "form-control"%>
                    <span class="input-group-addon" data-toggle="tooltip" data-placement="left"  aria-hidden="true" title="Combined refundable deposits upfront. Ex. Security deposits, Move In deposit">
                      <i class="fa fa-question-circle"></i>
                    </span>
                  </div>
                </div>
              </div>
            </div>
               
            <div class="form-group">
              <div class="pull-right">
                <%= f.submit 'Submit', class: "btn btn-blue" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>