<%= form_for(@rental_price_history) do |f| %>
  <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Residence Start Date</label>
          <%= f.text_field :residence_start_date, class: "form-control datepicker"%>
          <% if @unit.present? %>
            <%= f.hidden_field :unit_id, value: @unit.id%>
          <%end%>
        </div>
      </div>
      <div class="col-sm-6">
         <div class="form-group">
          <label for="exampleInputEmail1">Residence End Date</label>
            <%= f.text_field :residence_end_date, class: "form-control datepicker"%>
        </div>
      </div>
      <div class="col-sm-6">
         <div class="form-group">
          <label for="exampleInputEmail1">Monthly Rent $</label>
          <%= f.number_field :monthly_rent, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="exampleInputEmail1">Broker Fee $</label>
            <%= f.number_field :broker_fee, class: "form-control"%>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="exampleInputEmail1">Non Refundable Costs $</label>
           <div class="input-group">
             <%= f.number_field :non_refundable_costs, class: "form-control"%>
             <span class="input-group-addon">
                <i data-toggle="popover" data-placement="left" class="fa fa-question-circle" aria-hidden="true" data-content="Combined non refundable costs upfront, not including broker fee. Ex. Building Processing Fee, Credit Check Fees, General Misc Fees"></i>
            </span>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="exampleInputEmail1">Rent Up Front $</label>
           <div class="input-group">
             <%= f.number_field :rent_upfront, class: "form-control"%>
             <span class="input-group-addon">
                <i data-toggle="popover" data-placement="left" class="fa fa-question-circle" aria-hidden="true" data-content="Usually, rent for the first and last month. Refundable deposits are separate such as security deposits"></i>
            </span>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label for="exampleInputEmail1">Refundable Deposits $</label>
           <div class="input-group">
             <%= f.number_field :refundable_deposits, class: "form-control"%>
             <span class="input-group-addon">
                <i data-toggle="popover" data-placement="left" class="fa fa-question-circle" aria-hidden="true" data-content="Combined refundable deposits upfront. Ex. Security deposits, Move In deposit"></i>
            </span>
          </div>
        </div>
      </div>
     
      <div class="form-group">
        <div class="col-sm-12">
          <div class="pull-right">
            <%= f.submit 'Submit', class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      
    </div>
<% end %>
