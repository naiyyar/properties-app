<div class="login-form" id="page-login">
  <h3>Please sign in / sign up to upload photos.</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="btn-group-justified">
      <%= link_to "<span class='fa fa-facebook pull-left'></span> Sign In".html_safe, user_omniauth_authorize_path(:facebook), class: "btn btn-lg btn-facebook" %>
    </div>
  </div>
  <div class="form-group">
    <div class="btn-group-justified">
      <a href="#" class="btn btn-lg btn-google disabled"><span class="fa fa-google-plus pull-left"></span>Sign In with Google</a>
    </div>
  </div>
  <div class="signOr">OR</div>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control' , placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <div class="row">
      <!-- <div class="col-xs-6">
        <div class="checkbox custom-checkbox"><label><input type="checkbox"><span class="fa fa-check"></span> Remember me</label></div>
      </div> -->
      <div class="col-xs-6">
        <p class="help-block">
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <a href="#" class="text-green">Forget Password?</a>
          <%end%>
        </p>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Sign In", class: "btn btn-block btn-blue" %>
  </div>

  <p class="help-block">Don't have an account? <a href="#" class="modal-su text-green">Sign Up</a></p>
<%end%>
</div>