<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :id => 'sign_up_user', format: :json, remote: true }) do |f| %>
  <div class="form-group">
    <div class="btn-group-justified">
      <a href="<%=omniauth_authorize_path(resource_name, :facebook)%>" class="btn btn-lg btn-facebook"><span class="fa fa-facebook pull-left"></span>Sign Up with Facebook</a>
    </div>
  </div>
  <div class="form-group">
    <div class="btn-group-justified">
      <!-- <a href="<%#=omniauth_authorize_path(resource_name, :google_oauth2)%>" class="btn btn-lg btn-google" style="line-height: 26px;"><%#= image_tag 'btn_google_dark_normal_ios.png' %> Sign Up with Google</a> -->
      <%= render partial: 'layouts/shared/google_auth_buttons', locals: {resource: resource, btn_title: 'Sign Up with Google'} %>
    </div>
  </div>
  <div class="signOr">OR</div>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email', id: 'user_email_signup', autocomplete: 'off' %>
    <p class="help-block"></p>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password', id: 'signup_user_password' %>
    <p class="help-block"></p>
  </div>
  
  <div class="form-group">
    <%= f.submit 'Sign Up', class: 'btn btn-block btn-blue', data: { disable_with: "Signing up ..." }%>
  </div>
  <p class="help-block">Already a transparentcity member? <a href="/users/sign_in" class="modal-si0 text-green">Sign In</a></p>
<%end%>