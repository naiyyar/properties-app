<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :id => 'sign_up_user', format: :json, remote: true }) do |f| %>
  <div class="form-group">
    <div class="btn-group-justified">
      <a href="<%=user_omniauth_authorize_path(:facebook)%>" class="btn btn-lg btn-facebook"><span class="fa fa-facebook pull-left"></span>Sign Up with Facebook</a>
    </div>
  </div>
  <div class="form-group">
    <div class="btn-group-justified">
      <a href="<%=user_omniauth_authorize_path(:google_oauth2)%>" class="btn btn-lg btn-google"><span class="fa fa-google-plus pull-left"></span>Sign Up with Google</a>
    </div>
  </div>
  <div class="signOr">OR</div>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email', id: 'user_email_signup', autocomplete: 'off' %>
    <p class="help-block"></p>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password', id: 'signup_user_password' %>
    <p class="help-block"></p>
  </div>
  
  <div class="form-group">
    <%= f.submit 'Sign Up', class: 'btn btn-block btn-blue', data: { disable_with: "Signing up ..." }%>
  </div>
  <p class="help-block">Already a transparentcity member? <a href="javascript:void(0)" class="modal-si text-green">Sign In</a></p>
<%end%>