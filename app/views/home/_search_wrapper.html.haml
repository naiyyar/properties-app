#mapViewSearch
  .mapPlaceholder
    %span.fa.fa-spin.fa-spinner
    Loading map...

#content.searched-properties
  .tabsWidget.tabsWidgetSearch
    - unless browser.device.mobile?
      %ul.nav.nav-tabs.nav-justified{role: "tablist"}
        %li.active
          %a{"data-toggle" => "tab", href: "#buildings", role: "tab"}
            %b
              BUILDINGS #{"(#{ @buildings.present? ? @buildings.length : 0 })"}
        %li
          %a{"data-toggle" => "tab", href: "#resourceLinks", role: "tab"}
            %b
              NEIGHBORHOOD GUIDES #{"(#{@neighborhood_links.count})" if @neighborhood_links.present?}
    - else
      .row{style: 'padding-top: 6px;'}
        .col-xs-6
          %label{style: 'margin-bottom: 1px; padding: 2px 15px;'}
            =link_to "#{"(#{ @buildings.present? ? @buildings.count : 0 })"} Buildings", '#', style: 'color: #428bca;'
        .col-xs-6
          / %label.hyper-link.font-bolder Sorted By:
          %label.select{style: 'margin-bottom: 1px;'}
            = select_tag :sort, options_for_select(sort_options, params[:sort_by]), { prompt: 'Sorted By: Sort Type', data: {search_term: params[:search_term], neighborhoods: params[:neighborhoods] }, style: 'color: #428bca;border-color: transparent;height: 25px; padding: 0px 10px;' }
    
    .tab-content.tab-scroll11{style: "background-color: #f3f3f3;"}
      - unless browser.device.mobile?
        #resourceLinks.tab-pane.fade
          = render partial: 'neighborhood_links/resource_links'
      
      #buildings.tab-pane.fade.in.active
        - if @per_page_buildings.present?
          .resultsList
            #load-more-buildings.row
              = render partial: 'search_results', locals: { buildings: @all_building }
          - if @per_page_buildings.total_pages == @per_page_buildings.current_page
            .text-center{style: "padding:4px;"}
              No results matched your search
              %a{href: "/buildings/contribute?results=no-matches-found", style: "color: #0075c9;"}
                %b Add Your Building
          %br/
          .pages-container
            = will_paginate @per_page_buildings, renderer: BootstrapPagination::Rails
        - else
          .text-center{style: "padding:4px;"}
            No results matched your search
            %a{href: "/buildings/contribute?results=no-matches-found", style: "color: #0075c9;"}
              %b Add Your Building
.clearfix