#mapViewSearch{class: custom_search? ? 'max' : nil}
  .mapPlaceholder
    %span.fa.fa-spin.fa-spinner
    Loading map...

#content.searched-properties{class: (custom_search? and browser.device.mobile?) ? 'invisible' : nil}
  .tabsWidget.tabsWidgetSearch{style: "#{@buildings.blank? ? 'height: 60vh' : ''}"}
    - unless browser.device.mobile?
      %ul.nav.nav-tabs1.nav-justified.hidden-xs{role: 'tablist'}
        %li.active
          .text-center{style: 'padding: 8px 0px;'}
            %b{style: spv_count_header_style}= "#{@listings_count.to_i} Rentals | #{@buildings_count.to_i} Buildings"
      
    .tab-content.tab-scroll11{style: 'background-color: #f3f3f3;'}
      #buildings.tab-pane.fade.in.active
        - if @per_page_buildings.present?
          .resultsList
            #load-more-buildings.row= render partial: 'buildings/building', :collection => @all_buildings, :as => :building
          
          - if @all_buildings.blank? and @per_page_buildings.total_pages == @per_page_buildings.current_page
            .text-center{style: 'padding: 12px 4px;'}= no_search_result_text
          %br/
          .pages-container= will_paginate @per_page_buildings, renderer: BootstrapPagination::Rails
        - else
          .text-center{style: 'padding: 12px 4px;'}= no_search_result_text

    %section.spv-pop-search{style: 'margin-top: 25px; background: #fff;'}= render 'layouts/home/popular_searches'
  
    = render 'layouts/home/footer'
.clearfix