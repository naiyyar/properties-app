- content_for :page_title do
  = @tab_title_text if @tab_title_text.present?
#home-content-wrapper
  = render 'layouts/home/header'

  .row{style: 'margin-right: 0px;'}
    .col-lg-12.col-md-12.col-xs-12{style: 'padding-left: 0px;padding-right: 0px;'}
      #hero-container
        / .bg_image_holder
        = image_tag 'bg_img1.jpg', style: 'width: 100%;height: 100%;'
        .search-panel
          .text-center.home-about-nyc-apt
            %h1 Exclusively Broker Free Apartments
            %h1 For Rent In NYC
            %h2 Transparentcity connects renters directly to NYC landlords and property managers
          .home-search-form
          = render 'home/search_form'
          .home-quick-links
            = render 'home/quick_links'

  = render 'layouts/home/popular_neighborhoods'

  = render 'layouts/home/popular_searches'

  .home-wrapper.pb20{style: 'padding: 20px 20px 20px;background: #FBFBFF;'}
    .home-content
      .row
        .col-lg-1.col-sm-12
        .col-lg-10.col-sm-12
          %h2{style: 'font-weight: bolder;text-align: left;'} What We Do
          %p Transparentcity is a site that standardizes and aggregates information from websites of NYC landlords and property management companies, all of whom apartments can be rented directly from without working through a broker.
          = link_to 'Learn More <span class="fa fa-arrow-right"></span>'.html_safe, '/about', style: 'font-size: 21px;font-weight: bolder;'
        .col-lg-1.col-sm-12

  .home-wrapper.pb20{style: 'padding: 20px 20px 20px;background: #FBFBFF;'}
    .home-content
      .row
        .col-lg-1.col-sm-12
        .col-lg-10.col-sm-12
          %h2{style: 'font-weight: bolder;text-align: left;'} Help Your Fellow NYC Renters
          %p We aim to include as many photos, reviews, and tidbits about the NYC rental experience as we can from the communityâ€”because home means more than just walls and a roof.
          = link_to 'Write Review <span class="fa fa-arrow-right"></span>'.html_safe, contribute_buildings_path, style: 'font-size: 21px;font-weight: bolder;'
        .col-lg-1.col-sm-12