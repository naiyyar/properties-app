- content_for :page_title do
  = @tab_title_text if @tab_title_text.present?
#hero-container
  - cache('slider_home') do
    = render 'layouts/home/slider'
  = render 'layouts/home/header'
  .search-panel
    .text-center.home-about-nyc-apt
      %h1 Exclusively No Broker Fee Apartments In NYC
      %h2 transparentcity is the largest directory of links to no-fee, no-broker buildings in NYC
    .home-search-form
      = render partial: 'home/search_form'

- cache(['apt_popular_neighborhoods', @buildings_count, Date.today]) do
  = render 'layouts/home/popular_neighborhoods'

= render 'layouts/home/popular_searches'

.home-wrapper.pb20{style: 'padding: 20px 20px 20px;'}
  .home-content.how-it-works
    %h2{style: "font-weight: bolder;"} How Transparentcity Works
    .row
      .col-lg-4.col-sm-12
        .text-center
          %h2.title Search
          %p Find what you're interested in based on personal criteria on our exclusive to no broker fee buildings only platform.

      .col-lg-4.col-sm-12
        .text-center
          %h2.title Check Availability
          %p Check available apartments on management company websites, all which have been vetted by transparentcity.

      .col-lg-4.col-sm-12
        .text-center
          %h2.title Contact
          %p Contact, schedule showing, visit, apply and rent directly from management company, bypassing brokers and all associated fees.

.home-wrapper{style: 'padding: 20px 20px 20px;'}
  .home-content.summary
    %h2{style: "font-weight: bolder;"} Help A Fellow NYC Renter
    .row
      .col-lg-12.col-sm-12
        .tp-summary
          .text-center
            %p{style: 'margin: 0 0 30px;'} We aim to include as many photos, reviews, and tidbits about amenities as we can from the communityâ€”because home means more than just walls and a roof.

            = link_to 'Write Review', contribute_buildings_path, class: 'btn btn-green btn-xlg btn-lg border-green', style: 'font-size: 15px;'