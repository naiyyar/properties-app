<div id="mapViewSearch">
  <div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> Loading map...</div>
</div>

<div id="content" class="searched-properties">
  <div class="tabsWidget tabsWidgetSearch">
    <ul class="nav nav-tabs nav-justified" role="tablist">
      <li class="active"><a href="#buildings" role="tab" data-toggle="tab"><b>BUILDINGS <%= "(#{ @buildings.present? ? @buildings.count : 0 })" %></b></a></li>

      <li class="">
        <a href="#resourceLinks" role="tab" data-toggle="tab"><b>NEIGHBORHOOD GUIDES <%= "(#{@neighborhood_links.count})" if @neighborhood_links.present? %></b></a>
      </li>
    </ul>
    
    <div class="tab-content tab-scroll11" style="background-color: #f3f3f3;">
      <div class="tab-pane fade" id="resourceLinks">
        <%= render partial: 'neighborhood_links/resource_links' %>
      </div>

      <div class="tab-pane fade in active" id="buildings">
        <%if @per_page_buildings.present? %>
          <div class="resultsList">
            <div class="row" id="load-more-buildings">
              <%= render partial: 'search_results', locals: { buildings: @per_page_buildings } %>
            </div>
          </div>
          
          <% if @per_page_buildings.total_pages == @per_page_buildings.current_page%>
            <div style="padding:4px;" class="text-center"> No results matched your search <a href="/buildings/contribute?results=no-matches-found" style="color: #0075c9;"><b>Add Your Building</b></a></div>
          <%end%>
          
          <br />
          
          <div class="pages-container">
            <%= will_paginate @per_page_buildings, renderer: BootstrapPagination::Rails %>
          </div>
        <%else%>
         <div style="padding:4px;" class="text-center"> No results matched your search <a href="/buildings/contribute?results=no-matches-found" style="color: #0075c9;"><b>Add Your Building</b></a></div>
        <%end%>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>
