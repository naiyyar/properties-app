<div id="mapView">
  <div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> Loading map...</div>
</div>

<div id="content">
  <div class="filter">
      <h1 class="osLight"> 
      <b><%= @buildings.present? ? "#{@buildings.count} Properties Available" : '' %> </b></h1>
      
      <div class="clearfix"></div>
  </div>
  
  <%if @buildings.present? %>
    <div class="resultsList">
      <div class="row">
        <% @buildings.each do |building| %>
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <%= link_to building_path(building), class: "card", "data-no-turbolink" => false do %>
              <div class="figure">
                <%if building.uploads.present? %>
                  <%= image_tag building.uploads.last.image.url, alt: building.uploads.last.image_file_name %>
                <%else%>
                  <%= image_tag 'no-photo-available.jpg', alt: 'No image', height: '160'%>
                <%end%>
                <div class="figCaption">
                  <!-- <div>$1,550,000</div> -->
                  <span class="icon-eye"> 200</span>
                  <span class="icon-heart"> 54</span>
                  <span class="icon-bubble"> 13</span>
                </div>
                <div class="figView"><span class="icon-eye"></span></div>
                <!-- <div class="figType">FOR SALE</div> -->
              </div>
              <div id="building_details<%=building.id%>">
               
              </div>
              <div class="cardRating">
                <%= rating_for building, "building", disable_after_rate: true,readonly: true, cancel: false %>
              </div>
              <ul class="cardFeat">
                <li><span class="fa fa-star-o"></span> <%= building.reviews.count %></li>
                <li><span>Unit Reviews:</span> <%= building.unit_reviews_count %></li>
                <li><span class="icon-like"></span> <%= building.votes_for %></li>
                <li><span class="icon-dislike"></span> <%= building.votes_against %></li>
              </ul>
              <div class="clearfix"></div>
            <%end%>
          </div>
        <%end%>
      </div>
      <%= will_paginate @buildings, renderer: BootstrapPagination::Rails %>
    </div>
  <%end%>
</div>
<div class="clearfix"></div>
