var section = $('#featured-buildings-section');
<% unless @mobile_view %>
    section.html("<%= j render 'layouts/home/featured_buildings' %>");
<%else%>
    section.html("<%= j render 'layouts/shared/slick_slider', slides_to_show: 1 %>");
    Card.initSlick(1);
<%end%>

$('#home-popular_neighborhoods').html("<%= j render 'layouts/home/popular_neighborhoods' %>");

// When not using anchor tag
//
$('.clickable').click(function(e){
		if(e.target.tagName !== 'A'){
    	window.location = $(this).attr('data-href');
    	return false;
    }
});