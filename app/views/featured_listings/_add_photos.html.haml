- @imageable = featured_listing
#property-photos
	.row
		.col-lg-12.col-xs-12.col-lg-offset-3
			.row
				.col-lg-4.col-xs-8
					%p.font-21 Featured Listing
				.col-lg-2.col-xs-4
					= link_to 'Preview', object_show_path(featured_listing), class: 'btn btn-success btn-block font-16 font-bold', target: 'blank'
			%br

			.row
				.col-lg-12
					%p.font-bold.font-16.font-blue Add Photos
			
			.row
				.col-lg-12.col-xs-12
					%p{style: 'margin: 0px 0px;'} First image will be Featured
					.dz-short= render 'uploads/form_fields', show_done: false

			.row
				.col-lg-6.col-xs-12
					%ul#gallery.list-inline{'data-imageable-id' => featured_listing.id, 'data-imageable-type' => 'FeaturedListing'}
						- @photos.each do |upload|
							= render 'uploads/gallery', upload: upload, featured_image: true 

			/ video tours
			%br
			%br
			- tour_category = 'featured_listing'
			.row
				.col-lg-6.col-xs-12
					%h4.font-bold.font-16
						= link_to 'Add Video <span class="fa fa-plus"></span>'.html_safe, '#', class: 'add-tour-form', data: { category: tour_category, bid: @imageable.id, type: 'FeaturedListing' }
					
					.category-forms-container{id: "#{tour_category}-form"}
						- if @video_tours.present?
							- @video_tours.each do |tour|
								= render 'featured_listings/add_tour_form', video_tour: tour, category: tour_category, index: tour.sort, object: @imageable
						- else
							= render 'featured_listings/add_tour_form', video_tour: @new_video_tour, category: tour_category, index: 0, object: @imageable

			%br
			%br
			%br

			.row
				.col-lg-6
					.form-actions{style: 'margin: 8px;'}
						.text-right
							= previous_link(next_prev_step_url(@imageable, step: 'add_amenities'))
							- unless @imageable.live?
								= next_link(next_prev_step_url(@imageable, step: 'payment'))
							- else
								= done_link(frbotools_user_path(current_user, type: 'featured'))

			%br