.row
	.col-lg-12.col-xs-12.col-lg-offset-4
		.row
			.col-xs-12.col-sm-12.col-md-12.col-lg-4
				%p.font-21 Featured Listing
		.row
			.col-xs-6.col-sm-6.col-md-8.col-lg-4
				%b.font-16.font-blue Amenities
		
		.row
			.col-xs-12.col-sm-12.col-md-12.col-lg-4
				= form_for @featured_listing, class: 'form-horizontal' do |f|
					.row
						.col-xs-12.col-sm-12.col-md-6.col-lg-6
							.checkbox.custom-checkbox
								%label
									= check_box_tag 'featured_listing[amenities][no_fee]', 'No Fee', checked: true
									%span.fa.fa-check
									No Fee

							- BuildingAmenities.listing_amenities.each do |key, value|
								.checkbox.custom-checkbox
									%label
										- saved_value = @listing_amenities[key.to_s]
										= check_box_tag "featured_listing[amenities][#{key}]", value, saved_value.present?
										%span.fa.fa-check
										= value
		            
							= hidden_field_tag :next_step, :add_photos
					%br
					%br

					.row
						.col-sm-12.col-lg-12
							.text-center.form-actions
								= link_to '<- Previous', next_prev_step_url(@featured_listing, step: 'create'), class: 'btn btn-primary btn-o font-16 pl-28 pr-28'
								= f.submit 'Next ->', class: 'btn btn-primary font-16 pl-28 pr-28'

					%br
					%br
