- content_for :page_title, @featured_listing.address_with_unit

#street_view_btn.d-none.d-lg-block.d-md-block

- if screen_class == 'screen-lg'
	.row
		.col-lg-9.col-md-9{style: 'padding-right: 1px;'}
			#content{class: screen_class}
				.singleTop{style: 'position: relative;height: 460px'}
					.row.sh-slider
						#sh-slider{style: 'height: 460px;background: #ececec;'}
		
		.col-lg-3.col-md-3{style: 'padding-left: 0px;'}
			#mapView.apt-map{class: screen_class}
				.mapPlaceholder
					%span.fa.fa-spin.fa-spinner 
					Loading map...
		
	#show-content{style: 'width: 100%;'}
		.row
			.col-3
			.col-6= render 'show_content', show_summary: true
			.col-3
			
- else
	%a.listHandler.closeMap{href: 'javascript:;'}
		%span.fa.fa-times.fa-3x
	
	#mapView.mob-min{class: screen_class}
		.mapPlaceholder
			%span.fa.fa-spin.fa-spinner 
			Loading map...
	#pano

	#content.mob-max
		.singleTop{style: 'position: relative;height: 460px'}
			.row.sh-slider
				#sh-slider{style: 'height: 460px;background: #ececec;'}
 		
		= render 'show_content', show_summary: true

	.visible-xs
		.cta-buttons.show-mob{style: 'position: fixed; bottom: 10px;left: 50%;transform: translate(-50%, 0%);z-index: 99;display: none;'}= fancybox_cta_buttons(@featured_listing)

%br
.clearfix
= render 'layouts/home/footer'

#mapHash{'data-lat' => "#{@featured_listing.latitude.to_json}", 'data-lng' => "#{@featured_listing.longitude.to_json}", 'data-map' => "#{@gmaphash.to_json}"}
= hidden_field_tag :cu, current_user.present? ? current_user.id : nil
= hidden_field_tag :cu_object_id, @featured_listing.id
= hidden_field_tag :cu_object_type, 'FeaturedListing'