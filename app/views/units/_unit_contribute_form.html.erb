<%= form_tag '/buildings', method: :post, id: 'new_unit_building', class: 'hide' do %>
	<div id="new_unit_fields">
		<div class="col-sm-12">
			<label><b>New unit</b></label>
      <%= hidden_field_tag 'building[building_name]', nil, class: "form-control", placeholder: 'Building name'%>
      <%= hidden_field_tag 'unit_id', nil %>
      <%= hidden_field_tag 'building[building_street_address]', @building.present? ? @building.building_street_address : nil, class: "form-control" %>
      <%= hidden_field_tag 'building[zipcode]', @building.present? ? @building.zipcode : nil, class: "form-control" %>
		</div>
		<!-- <div class="col-sm-6">
      <div class="form-group">
        <%#= hidden_field_tag 'building[building_name]', nil, class: "form-control", placeholder: 'Building name'%>
        <%#= hidden_field_tag 'unit_id', nil %>
      </div>
    </div>
    <div class="col-sm-6">
       <div class="form-group">
        <%#= hidden_field_tag 'building[building_street_address]', @building.present? ? @building.building_street_address : nil, class: "form-control" %>
        <%#= hidden_field_tag 'building[zipcode]', @building.present? ? @building.zipcode : nil, class: "form-control" %>
      </div>
    </div> -->

    <div class="col-sm-6 hide">
      <div class="form-group">
        <%= text_field_tag 'unit_name', nil, name: 'building[units_attributes][0][name]', class: 'form-control validate', placeholder: 'Unit #' %>
        <p class="help-block">This field is required</p>
        <%= hidden_field_tag :unit_contribution, params[:contribution_for].present? ? params[:contribution_for] : nil %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <!-- <label>ft<sup>2</sup>  </label> -->
        <%= text_field_tag 'unit_square_feet', nil, name: 'building[units_attributes][0][square_feet]', class: 'form-control', placeholder: 'Square feet'%>
        <p class="help-block square_feet_help_block">Optional</p>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <!-- <label>Bedrooms </label> -->
        <div class="input-group">
          <%= text_field_tag 'unit_number_of_bedrooms',nil, name: "building[units_attributes][0][number_of_bedrooms]", class: "form-control", placeholder: 'Bedrooms'%>
          <span class="input-group-addon">
            <i data-toggle="popover" data-placement="left" class="fa fa-question-circle" aria-hidden="true" data-content="Use 0 for a studio."></i>
          </span>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <!-- <label>Bathrooms </label> -->
        <%= text_field_tag 'unit_number_of_bathrooms',nil, name: "building[units_attributes][0][number_of_bathrooms]", class: "form-control", placeholder: 'Bathrooms'%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="pull-right">
      	<%# if user_signed_in? %>
          <%= submit_tag 'Next', class: 'btn btn-primary' %>
        <%#else%>
          <%#= link_to 'Next','#signin', 'data-toggle' => 'modal', class: 'btn btn-primary'%>
        <%#end%>
      </div>
    </div>
  </div>
<%end%>