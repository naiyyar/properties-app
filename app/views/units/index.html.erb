<div class="tables">
  <% if current_user.present? %>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="pull-right">
          <%= link_to "Add new unit", new_unit_path, class: 'btn btn-blue' %>
        </div>
      </div>
    </div>
    <h2></h2>
  <%end%>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="table-overflow">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Unit Name</th>
              <th>Building</th>
              <th>Price Histories</th>
              <th></th>
              <th></th>
              <th></th>

            </tr>
          </thead>
          <tbody>
            <% if @units.present? %>
              <% @units.each do |unit| %>
              <tr>
                <td><%= link_to unit.name, unit_path(unit) %></td>
                <td><%= link_to unit.building.building_name, building_path(unit.building) %></td>
                <td><%= link_to 'Price Histories', rental_price_histories_path(unit_id: unit.id) %></td>
                <td></td>
                <% if current_user %>
                <td><%= link_to "edit", edit_unit_path(unit) %></td>
                <td><%= link_to "delete", unit_path(unit), method: :delete, data: { confirm: "Are you sure you want to delete this building?"}%></td>  
                <% end %>
                <%end%>   
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>




