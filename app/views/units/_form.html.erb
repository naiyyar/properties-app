<div class="tables">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading"><b>Unit</b></div>
        <div class="panel-body">                       
          <%= form_for @unit, class: 'form-horizontal' do |f| %>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Unit Name*</label>
                   <%= f.text_field :name, class: "form-control validate", readonly: disabled(current_user, f.object.name) %>
                   <!-- <p class="help-block">This field is required</p> -->
                   <%= f.hidden_field :user_id, value: current_user.id if current_user%>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Building*</label>
                  <% if params[:action] == 'new' %>
                    <%= f.collection_select(:building_id, Building.where('building_name <> ?', ''), :id, :building_name, { :prompt => :true }, { class: "form-control validate" }) %>
                  <%else%>
                    <%= text_field_tag 'building_address',f.object.building.building_street_address, class: "form-control validate", readonly: true %>
                    <%= f.hidden_field :building_id, value: f.object.building_id %>
                  <%end%>
                  <!-- <p class="help-block">This field is required</p> -->
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <div class="form-group">
                  <label>Bedrooms*</label>
                   <%#= f.number_field :number_of_bedrooms, class: "form-control validate", min: 0 %>
                   <%= f.select :number_of_bedrooms, options_for_select(bedroom_options, f.object.number_of_bedrooms), { prompt: 'select bedrooms' }, { class: "form-control" } %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <div class="form-group">
                  <label>Bathrooms*</label>
                   <%= f.text_field :number_of_bathrooms, class: "form-control validate" %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <div class="form-group">
                  <label>Square Feet*</label>
                   <%= f.number_field :square_feet, class: "form-control validate", min: 0 %>
                </div>
              </div>
            </div>
            <!-- <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Move In Fee</label>
                   <%#= f.number_field :move_in_fee, class: "form-control", min: 0 %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                  <label>Processing Fee</label>
                   <%#= f.number_field :processing_fee, class: "form-control", min: 0 %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label>Pros</label>
               <%#= f.text_area :pros, class: "form-control" %>
            </div>
          
            <div class="form-group">
              <label>Cons</label>
               <%#= f.text_area :cons, class: "form-control"%>
            </div> -->
              
            <div class="form-group">
              <div class="pull-right">
                <%= link_to 'Cancel', unit_path(@unit), class: 'btn btn-default' if !@unit.new_record? %>
                <%= f.submit 'Submit', class: "btn btn-primary" %>
              </div>
            </div> 
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>