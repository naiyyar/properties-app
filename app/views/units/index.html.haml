.tables
  - if current_user.present?
    .row
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        .pull-right
          = link_to 'Add new unit', new_unit_path, class: 'btn btn-blue'
    %h2
  .pull-right
    = form_for_filterrific @filterrific do |f|
      .form-field
        = f.text_field :search_query, class: 'filterrific-periodically-observed form-control', placeholder: 'Search'
      .form-field
  
  - cache [@units, params[:page]] do
    = render 'units/units', :@units => @units
.text-center
  = will_paginate @units, renderer: BootstrapPagination::Rails