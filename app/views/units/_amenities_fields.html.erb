<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <div class="media">
      <div class="media-left">
        <div class="media-body">
          <b class="media-heading"><%= link_to_building_show @unit.building %></b> <br />
          <small class="text-muted">
            <%= building_street_address @unit.building %> <br />
            <%= city_state_zip @unit.building %> <br />
            <%= link_to @unit.name, unit_path(@unit) %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
<br />
<div class="row">
  <%= form_for @unit do |f| %>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="form-group">
        <div class="col-sm-6">
          <label>Unit Information</label>
          <div class="checkbox">
            <label>
              <%= f.check_box :balcony %> Balcony
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :board_approval_required %> Board Approval Required
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= check_box_tag :converted_unit %> Converted unit 
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :courtyard %> Courtyard
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :dishwasher %> Dishwasher
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :fireplace %> Fireplace
            </label>
          </div>
           <div class="checkbox">
            <label>
              <%= f.check_box :furnished %> Furnisged
            </label>
          </div>
           <div class="checkbox">
            <label>
              <%= f.check_box :guarantors_accepted %> Guarantors Accepted
            </label>
          </div>
           <div class="checkbox">
            <label>
              <%= f.check_box :loft %> Loft
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :management_company_run %> Management Company Run
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :rent_controlled %> Rent Controlled
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :private_landlord %> Private Landlord
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :storage_available %> Storage Available
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :sublet %> Sublet
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :terrace %> Terrace
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :can_be_converted %> Unit Can Be Converted
            </label>
          </div>
          <div class="checkbox">
            <label>
              <%= f.check_box :dryer_in_unit %> Washer/Dryer In-Unit
            </label>
          </div>
        </div>
      </div>
      <br />
      <br />
      <div class="form-group">
        <div class="col-sm-12">
          <div class="pull-right">
            <%= link_to 'Cancel', unit_path(@unit), class: 'btn btn-default'%>
            <%= f.submit 'Submit', class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>    
  <% end %>
</div>