<div class="summary">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <div class="summaryItem">
          <h1 class="pageTitle">
            <%= "#{@unit.name}" %> <%#= @unit.building.building_street_address %>
            <% if user_signed_in? %>
                <%= link_to "Edit", edit_unit_path(@unit), class: 'btn btn-o btn-default btn-xs' %>
            <%end%>
          </h1>
          <div class="address"><span class="icon-location-pin"></span> 
            <%= link_to building_path(@unit.building) do %>
              <b>
                <%= @unit.building.street_address %>, <%= @unit.building.zipcode %> <br />  
              </b>
            <%end%>
          </div>
          <div class="address"><span class="fa fa-building"></span> <%= link_to @unit.building.building_name, building_path(@unit.building) %></div>
          <ul class="rating">
            <%= rating_for @unit, "unit", disable_after_rate: true, readonly: true %>
          </ul>
          <div class="favLink">(<%= @unit.reviews.count %>)</div>
          <% if @unit.votes.present? %>
            <div class="favLink"><span class="icon-pipe">|</span>
              <%= "#{@unit.recommended_percent.to_i}% Recommended" %> 
            </div>
          <%end%>
          <!-- <ul class="stats">
            <li><span class="icon-eye"></span> 200</li>
            <li><span class="icon-bubble"></span> 13</li>
          </ul> -->
          <div class="clearfix"></div>
          <ul class="features">
            <li><span class="fa fa-bed"></span><div><%= @unit.number_of_bedrooms %> Bedrooms</div></li>
            <li><span class="fa fa-bath"></span><div><%= @unit.number_of_bathrooms %> Bathrooms</div></li>
            <li><span class="icon-frame"></span><div><%= @unit.square_feet.to_i %> Sq Ft</div></li>
          </ul>
          <div class="clearfix"></div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <div class="agentAvatar summaryItem">
          <div class="clearfix"></div>
          <%#= image_tag 'avatar-2.png', class: "avatar agentAvatarImg", alt: 'Avatar' %>
          <!-- <div class="agentName">Jane Smith</div> -->
          <!-- <a data-toggle="modal" href="#contactAgent" class="btn btn-lg btn-warning contactBtn">Contact Agent</a> -->
          <%= link_to '<span class="fa fa-star"><span> Write a review'.html_safe, new_unit_review_path(unit_id: @unit), class: "btn btn-o btn-yellow contactBtn hidden-xs", "data-no-turbolink" => false  %>
          <%= link_to "<i class='fa fa-camera'></i> Upload photos".html_safe, new_unit_upload_path(unit_id: @unit), class: "btn btn-o btn-gray contactBtn hidden-xs", "data-no-turbolink" => false %>
          
      </div>
    </div>
  </div>
</div>