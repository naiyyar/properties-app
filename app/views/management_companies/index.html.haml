.tables
  - if current_user.present?
    .row
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        .pull-right
          = link_to "Add New Management", new_management_company_path, class: 'btn btn-blue'
    %h2
  .row
    .col-xs-12.col-sm-12.col-md-12.col-lg-12
      .table-overflow
        %table#sortable.table
          %thead
            %tr
              %th Management Name (#{@management_companies.count})
              %th Website
              %th Buildings
              %th{width: "12%"} Rating
              %th Reviews
              %th Creation Date
              %th Edit
              %th Delete
          
          %tbody.table
            - @management_companies.each do |company|
              %tr
                %td
                  %span.propName
                    %b= link_to company.name, no_fee_company_path(id: company)
                %td.text-center= link_to '<span class="fa fa-globe"></span>'.html_safe, company.website, target: '_blank' if company.website.present?
                %td.text-center= link_to company.buildings.count, managed_buildings_management_company_path(company), class: 'hyper-link' if company.buildings.present?
                %td.star-sm
                  - @stars = company.get_average_stars
                  = render 'layouts/shared/custom_rating'
                %td= company.aggregate_reviews
                %td= company.created_at.strftime("%Y-%m-%d")
                - if current_user && current_user.has_role?(:admin)
                  %td= link_to "edit", edit_management_company_path(company)
                  %td= link_to "Delete", management_company_path(company), method: :delete, data: {confirm: "Are you sure you want to delete this management?"}, class: 'text-danger'
.text-center