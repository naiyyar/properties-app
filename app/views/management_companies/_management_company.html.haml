- buildings = company.company_buildings
%tr
  %td
    %span.propName
      %b= link_to company.name, no_fee_company_path(id: company)
  %td.text-center= link_to '<span class="fa fa-globe"></span>'.html_safe, company.website, target: '_blank' if company.website.present?
  %td.text-center= link_to company.cached_company_buildings_count, managed_buildings_management_company_path(company), class: 'hyper-link' if buildings.present?
  %td.star-sm
    - @stars = company.get_average_stars(buildings, Review.buildings_reviews(buildings).count)
    = render 'layouts/shared/custom_rating'
  %td= company.aggregate_reviews(buildings)
  %td= company.created_at.strftime("%Y-%m-%d")
  - if current_user && current_user.has_role?(:admin)
    %td= link_to "edit", edit_management_company_path(company)
    %td= link_to "Delete", management_company_path(company), method: :delete, data: {confirm: "Are you sure you want to delete this management?"}, class: 'text-danger'
  %td.text-center
    %input.apple-switch.sb-sm.company{type: 'checkbox', checked: company.active_email_buildings?, style: 'margin: 0px;', data: { companyid: company.id, fieldtype: 'email' } }
  %td.text-center
    %input.apple-switch.sb-sm.company{type: 'checkbox', checked: company.active_website_buildings?, style: 'margin: 0px;', data: { companyid: company.id, fieldtype: 'website' } }