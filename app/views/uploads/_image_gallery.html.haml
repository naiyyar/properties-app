- uploads.each_with_index do |upload, index|
	- url = upload.image.url
	= render 'uploads/gallery', featured_image: featured_image, upload: upload, url: url, index: index

- if false
	/ TO REMOVE
	- if current_user&.has_role?(:admin)
		.photo-grid-item.image-gallery{'data-object-id' => "#{upload.id}", 'data-sort-id' => index}
			%a.propWidget-1{caption: "#{date_uploaded(upload)}", 'data-fancybox' => 'gallery', 'data-role' => 'slider', href: "#{url}"}
				= image_tag url, alt: 'Image', class: 'img-thumbnail'
			
			- unless featured_image
				= delete_upload_link(upload)
				= edit_upload_link(upload)
				= rotate_image_link(upload)
				%div{style: 'position: absolute; right: 5px; bottom: 25px;'}
					= link_to number_to_human_size(upload.image_file_size), 'javascript:;', class: 'btn btn-default btn-xs'

:css
	.actions-links{
		position: absolute;
		top: 3px;
		right: 3px;
	}
	.fl-featured-image img.img-thumbnail{
		border: 1px solid #2b78e4;
	}
