<div class="tables">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="table-overflow">
        <table class="table">
          <thead>
            <tr>
              <th>Document Name</th>
              <th>PROPERTY</th>
              <th>ADDRESS</th>
              <th>Name</th>
              <th>Email</th>
              <th># of downloads</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="table table-bordered">
            <% @documents.each do |document| %>
              <tr>
                <td><%= link_to document.document_file_name, document.document.url, class: 'link_underlined', 'data-no-turbolink' => false, target: '_blank' %></td>
                <td><%#= document.imageable.building_name %>
                  <%= link_to(building_name_or_address(document.imageable), building_path(document.imageable)) if document.imageable.present? %>
                </td>
                <td>
                  <% if document.imageable.present? %>
                    <%= document.imageable.street_address %> <%= document.imageable.zipcode %>
                  <%end%>
                </td>
                <td><%= document.user.name %></td>
                <td><%= link_to document.user.email, user_path(document.user) %></td>
                <td><%= link_to document.total_downloads, downloaders_document_downloads_path, class: 'link_underlined' %></td>
                <td class="text-right">
                  <%##= link_to 'Rename'.html_safe, "#renameDoc#{document.id}", 'data-toggle' => 'modal' %>
                  <%#= render partial: 'uploads/rename_doc_form', locals: { upload: document } %>
                  <%= link_to 'Delete'.html_safe, document, method: :delete, data: { confirm: 'Are you sure you want to delete this document?' }, title: 'Delete', class: 'text-danger' %>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>





