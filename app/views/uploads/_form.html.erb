<div class="row">
	<div class="col-lg-12">
		<div class="media">
	    <div class="media-left">
	      <div class="media-body">
	      	<% if @imageable.kind_of? Unit %>
	      		<h1 class="pageTitle">
	      			<%= "#{@imageable.building.building_name} #" if @imageable.building.building_name.present? %><%= link_to @imageable.name, unit_path(@imageable)%>
	      		</h1>
	      		<div class="address text-muted">
	        		<%= link_to building_path(@imageable.building) do %>
	        			<!-- method on reviews helper -->
		        		<%= building_street_address @imageable %> <br />
		        		<%= @imageable.building.neighborhood %>
	        		<%end%>
	        	</div>
	      	<%else%>
	      		<h1 class="pageTitle"><%= link_to @imageable.building_name_or_address, building_path(@imageable) %></h1> 
	      		<div class="address text-muted">
	        		<%= link_to building_path(@imageable) do %>
	        			<!-- method on reviews helper -->
		        		<%= building_street_address @imageable %> <br />
		        		<%= @imageable.neighborhood %>
	        		<%end%> 
	        	</div>
	      	<%end%>
	      </div>
	    </div>
	  </div>
	</div>	
</div>

<h2></h2>

<%= render partial: 'uploads/form_fields' %>