<div class="col-lg-12">
	<div class="media">
    <div class="media-left">
      <div class="media-body">
      	<% if @imageable.kind_of? Unit %>
      		<b class="media-heading"><%= link_to @imageable.building.building_name, building_path(@imageable.building) %></b>
      		<br />
      		<small class="text-muted">
        		<%= link_to building_path(@imageable.building) do %>
	        		<%= @imageable.building.building_street_address %> <br />
	        		<%= "#{@imageable.building.city}, #{@imageable.building.state} #{@imageable.building.zipcode}" %> 
        		<%end%> <br />
        		<%= link_to @imageable.name, unit_path(@imageable)%>
        	</small>
      	<%else%>
      		<b class="media-heading"><%= link_to @imageable.building_name, building_path(@imageable) %></b>  <br />
      		<small class="text-muted">
        		<%= link_to building_path(@imageable) do %>
	        		<%= @imageable.building_street_address %> <br />
	        		<%= "#{@imageable.city}, #{@imageable.state} #{@imageable.zipcode}" %> 
        		<%end%> 
        	</small>
      	<%end%>
      </div>
    </div>
  </div>
</div>	

<div class="col-lg-12 margin-top-10">
	<%= form_for([@imageable, Upload.new], html: { multipart: true, class: "dropzone" }) do |f|  %>
	  <div class="fallback">
	    <%= f.file_field :image %> <br />
	    <% if current_user.present? %>
	    	<%= f.hidden_field :user_id, value: current_user.id %> <br />
	    <%end%>
	    <%= f.submit "Upload" %>
	  </div>
	<% end %>
	<div class="pull-right margin-top-10">
		<% if @imageable.kind_of? Unit %>
			<%= link_to 'Done', unit_path(@imageable), class: 'btn btn-primary' %>
		<%else%>
			<%= link_to 'Done', building_path(@imageable), class: 'btn btn-primary' %>
		<%end%>
	</div>
</div>
