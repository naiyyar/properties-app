/* ============== HOME HEADER NAV STYLING ============= */

.no-touch {
	.home-nav ul.homeNavUl li a:hover {
    color: #000;
  }
}

.home-nav{
	float: right;
  -webkit-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
	
	ul.homeNavUl{
		margin: 0px 0px 0px 19px;
    padding: 20px 0px;
    list-style-type: none;
    float: right;
    -webkit-transition: all .2s ease-in-out;
    -o-transition: all .2s ease-in-out;
    transition: all .2s ease-in-out;

		li.parent{
			float: left;
	    margin-left: 20px;
	    padding-top: 0px;
	    color: #777;
			&:not(.no-hover-underline):hover{
				border-bottom: 1px solid #ffffff;
			}
			a{
				color: #000;
    		font-size: 15px;
				&:hover{
					border-bottom: 2px solid #333;
				}
			}
		}
	}

	ul.homeNavUl.shared{
		li a{
			color: #fff;
			&:hover{
				color: #fff;
				border-bottom: 2px solid #fff;
			}
		}
	}
}

.home-header {
  position: fixed;
  width: 100%;
  padding: 0px 69px 0px;
  color: #000;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: #fff;
  box-shadow: 0px 2px 3px rgba(0,0,0,0.2);
  height: 59px;
  .home-logo {
	    color: #fff;
	    font-size: 20px;
	    float: left;
	    margin-top: 0px;
	    width: 146px;
	    span {
	    	font-size: 34px;
		}
	}
}
.home-header.map {
  background: rgba(0, 0, 0, 0.50);
}

/* ========== END HOME HEADER NAV STYLING =========*/


/* ========== START POPULAR NEIGHBORHOODS =========*/

