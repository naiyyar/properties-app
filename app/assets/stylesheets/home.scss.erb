/* ========= MEDIA QUERY============ */

@media screen and (max-width: 767px) {
  #apt-search-form.other {
    margin: 0 0px !important;
  }
  #home-content-wrapper {
		#hero-container {
			.search-panel {
	      width: 97%;
	      padding: 0px 0px 0px 9px;
	    }
		}
    .home-about-nyc-apt {
      h1 {
        font-size: 35px;
      }
      h2 {
        font-size: 20px;
      }
    }
  }

  .home-header {
    padding: 0px 88px 0px !important;
    .home-logo {
      width: 200px !important;
    }
  }

  .expended {
    .leftNav {
      ul {
        li.logo a > img {
          width: 180px !important;
        }
      }
    }
  }
}

@media screen and (min-width: 768px) and (max-width: 991px) and (-webkit-min-device-pixel-ratio: 2) and (orientation: portrait) {
		#home-content-wrapper {
  		#hero-container{
