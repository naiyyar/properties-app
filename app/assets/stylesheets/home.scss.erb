.figure .shimmer{
  width: 100%;
  height: 215px;
}

@keyframes placeHolderShimmer{
  0%{
      background-position: -468px 0
  }
  100%{
      background-position: 468px 0
  }
}
.animated-background, .shimmer {
  animation-duration: 1s;
  animation-fill-mode: forwards;
  animation-iteration-count: infinite;
  animation-name: placeHolderShimmer;
  animation-timing-function: linear;
  background: linear-gradient(to right, #f7f7f7 8%, #f2f2f2 18%, #f7f7f7 33%);
  background-size: 800px 104px;
  position: relative;
}

.content-wrapper.homeindex{
	position: relative;
  min-height: 100%;
  margin: 0;
  padding: 0;
  background-color: #fff;
  overflow-x: hidden;
}

body, .content-wrapper.homeindex{
	max-width: 2560px;
}

/* 
==========
========== POPULAR NEIGHBORHOODS =========
==========
*/

.pop-list{
	b{
		font-size: 18px !important;
		color: #000;
		text-decoration: underline;
		a{
			color: #2b78e4;
			text-decoration: underline;
			font-size: 18px;
		}
		a:hover{
			text-decoration: underline;
		}
	}
	li{
		list-style: none;
		padding: 1px 0px;
		a{
			color: #2b78e4;
			font-size: 16px;
		}
		ul{
			padding: 0px 0px 0px 22px;
			li{
				list-style: none;
				padding: 2px 0px !important;
				a{
					color: #2b78e4;
					font-size: 16px;
				}
			}
		}
	}
}

#apt-search-form{
	span.input-magnifier{
		position: absolute;
    right: 0px;
    top: 0px;
    z-index: 999;
    a.btn{
    	font-size: 15px;
    	border-top-left-radius: 0px !important;
    	border-bottom-left-radius: 0px !important;
    	border-top-right-radius: 2px;
    	border-bottom-right-radius: 2px;
    }
	}
}

#apt-search-form.other{
  margin: 1px 5px !important;
}

#home-content-wrapper{
	.home-wrapper {
	  margin: 0 auto;
	  .home-content.featured-section{
	  	padding: 0px 16px;
		}
	  .home-content{
	  	p {
	  		font-size: 18px;
	  		color: #000;
	  	}
	  	h2:not(.name-or-add) {
			  margin: 0;
			  padding: 20px 0 30px 0;
			  font-size: 30px;
			  line-height: 37px;
			  text-align: center;
			  color: #000;
			}
		  h2.h-r {
		  	text-align: right;
			}
	  }
	}
}

/* ========= MEDIA QUERY============ */

@media screen and (max-width: 767px) {
	body.home{
    overflow: hidden;
    .home-footer {
      padding: 20px;
    }
  }

  .content-wrapper.homeindex {
    margin-top: 0px;
    height: 767px;
    overflow-x: hidden;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    #home-content-wrapper {
      padding-top: 0px;
    }
  }

  #apt-search-form.other {
    margin: 0 0px !important;
  }

  .pop-list {
		b { color: #fff; }
	}
  
  #home-content-wrapper {
    .home-wrapper {
	  	padding: 20px;
	  	.home-content.featured-section{
		  	padding: 0px 0px;
			}
		  .home-content{
		  	p{
		  		font-size: 16px;
		  	}
		  	h2:not(.name-or-add) {
		  		margin-top: 0px;
		  		font-size: 22px;
		  		padding: 0px 0 30px 0;
		  	}
		  }
		}
  }

  .expended {
    .leftNav {
      ul {
        li.logo a > img {
          width: 180px !important;
        }
      }
    }
  }
}

@media screen and (min-width: 768px) and (max-width: 991px) and (-webkit-min-device-pixel-ratio: 2) and (orientation: portrait) {
	#home-content-wrapper {
		.home-wrapper {
			padding: 0px 20px;
		}
	}
}

