.figure .shimmer{
  width: 100%;
  height: 215px;
}

@keyframes placeHolderShimmer{
  0%{
      background-position: -468px 0
  }
  100%{
      background-position: 468px 0
  }
}
.animated-background, .shimmer {
  animation-duration: 1s;
  animation-fill-mode: forwards;
  animation-iteration-count: infinite;
  animation-name: placeHolderShimmer;
  animation-timing-function: linear;
  background: linear-gradient(to right, #f7f7f7 8%, #f2f2f2 18%, #f7f7f7 33%);
  background-size: 800px 104px;
  position: relative;
}

.content-wrapper.homeindex{
  margin-top: 58px;
}

/* HOME HEADER NAV */

.home-nav{
	ul.homeNavUl{
		position: relative;
		margin: 0px;
    padding: 19px 0px;
    list-style-type: none;
		li.parent{
			float: left;
	    margin: 0px 10px;
	    padding: 0px;
	    color: #777;
			&:not(.no-hover-underline):hover{
				border-bottom: 1px solid #ffffff;
			}
			a{
				color: #000;
    		font-size: 15px;
				&:hover{
					border-bottom: 2px solid #333;
				}
			}
		}
	}

	ul.homeNavUl.shared{
		li a{
			color: #000;
			&:hover{
				color: #000;
				border-bottom: 2px solid #000;
			}
		}
	}
}

.home-header.home-page{
	box-shadow: 0px 2px 3px rgba(0,0,0,0.2);
}

.home-header.other-page {
	box-shadow: none;
	border-bottom: 1px solid #ddd;
}

.home-header {
  position: fixed;
  width: 100%;
  padding: 0px 69px 0px;
  color: #000;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: #fff;
  height: 59px;
  .home-logo {
	  float: left;
	  width: 176px;
	  height: 59px;
	}
}

.home-header.map {
  background: rgba(0, 0, 0, 0.50);
}

.no-touch {
	.home-nav ul.homeNavUl li a:hover {
    color: #000;
  }
}

