var loader_path = "<%= asset_path 'loader.gif' %>";
function showImagePreview(file, file_size){
		var reader  = new FileReader();
	  reader.addEventListener('load', function (e) {
		var img_class = 'image_file'+file_size;
		var preview_container_id = 'preview_container'+file_size;
		 var image = $($.parseHTML('<img>')).attr('src', e.target.result);
		 var preview_div = '<div class="pull-left image-preview" id="'+preview_container_id+'"><div class="progress-loader"><img src="'+loader_path+'" class="'+img_class+'" /></div></div>';
		 var image_div = $(preview_div).append(image);
		 $('.images-container').prepend(image_div);
	  }, false);

	  if (file) {
	    reader.readAsDataURL(file);
	  }

}